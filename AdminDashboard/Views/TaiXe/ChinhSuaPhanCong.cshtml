@model AdminDashboard.Models.ChuyenXe

@{
    ViewData["Title"] = "Chỉnh sửa phân công tài xế";
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>

    <form asp-action="ChinhSuaPhanCong" method="post">
        <input type="hidden" name="chuyenId" value="@Model.ChuyenId" />

        <div class="card p-3 mb-3 shadow-sm">
            <h5>Thông tin chuyến xe</h5>
            <p><strong>Mã chuyến:</strong> @Model.ChuyenId</p>
            <p><strong>Lộ trình:</strong> @Model.LoTrinh?.TramDiNavigation?.TenTram → @Model.LoTrinh?.TramToiNavigation?.TenTram</p>
            <p><strong>Ngày đi:</strong> @Model.NgayDi.ToString("dd/MM/yyyy")</p>
            <p><strong>Giờ đi:</strong> @Model.GioDi.ToString(@"hh\:mm")</p>
        </div>

        <div class="form-group mb-3">
            <label for="taiXeId">Chọn tài xế mới</label>
            <select id="taiXeId" name="taiXeId" class="form-control" asp-items="ViewBag.TaiXeList">
                <option value="">-- Chọn tài xế --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="LichSuPhanCong" class="btn btn-secondary">Quay lại</a>
    </form>
</div>