@model IEnumerable<AdminDashboard.Models.TaiXe>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý tài xế";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-users me-2"></i> Danh sách tài xế</h4>
            <a asp-action="Create" class="btn btn-light text-primary fw-semibold">
                <i class="fas fa-plus-circle me-1"></i> Thêm tài xế mới
            </a>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> Hiện chưa có tài xế nào được đăng ký.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Mã tài xế</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Bằng lái xe</th>
                            <th>Ngày vào làm</th>
                            <th>Trạng thái</th>
                            <th class="text-center" style="width: 160px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserId</td>
                                <td>@item.NguoiDung?.HoTen</td>
                                <td>@item.NguoiDung?.Email</td>
                                <td>@item.BangLaiXe</td>
                                <td>@item.NgayVaoLam.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.TrangThai == "Hoạt động")
                                    {
                                        <span class="badge bg-success">@item.TrangThai</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@item.TrangThai</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info btn-sm me-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bạn có chắc muốn xóa tài xế này không?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>