@model AdminDashboard.Models.Tram

<h2>Xóa Trạm</h2>
<h3>Bạn có chắc muốn xóa trạm này?</h3>
<div>
    <h4>Trạm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã Trạm</dt>
        <dd class="col-sm-10">@Model.IdTram</dd>

        <dt class="col-sm-2">Tên Trạm</dt>
        <dd class="col-sm-10">@Model.TenTram</dd>

        <dt class="col-sm-2">Địa Chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChiTram</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdTram" />
    <button type="submit" class="btn btn-danger">Xóa</button> |
    <a asp-action="Index">Quay lại</a>
</form>
