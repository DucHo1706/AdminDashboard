@using AdminDashboard.Models
@model IEnumerable<AdminDashboard.Models.Tram>

@{
    ViewData["Title"] = "Quản Lý Trạm Xe";
}

<div class="page-container">
    <div class="page-header">
        <h1 class="page-title"><i class="fas fa-map-marker-alt"></i> @ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-add-new">
            <i class="fas fa-plus-circle"></i> Thêm Trạm mới
        </a>
    </div>

    <div class="content-panel">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success custom-alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger custom-alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table modern-table">
                <thead>
                    <tr>
                        <th>Mã Trạm</th>
                        <th>Tên Trạm</th>
                        <th>Địa Chỉ</th>
                        <th>Tỉnh/Thành</th>
                        <th>Quận/Huyện</th>
                        <th class="text-center">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge bg-primary-light">@item.IdTram</span></td>
                            <td class="fw-bold">@item.TenTram</td>
                            <td>@item.DiaChiTram</td>
                            <td>@item.Tinh</td>
                            <td>@item.Huyen</td>

                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.IdTram" class="btn-action btn-edit" title="Sửa">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdTram" class="btn-action btn-details" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <button type="button" class="btn-action btn-delete" title="Xóa"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@item.IdTram"
                                            data-tentram="@item.TenTram"
                                            data-diachi="@item.DiaChiTram">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel"><i class="fas fa-exclamation-triangle"></i> Xác nhận Xóa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="deleteTramId" name="IdTram" />
                    <p>Bạn có chắc chắn muốn xóa trạm này không?</p>
                    <dl class="row mt-3 bg-light p-2 rounded">
                        <dt class="col-sm-4">Tên Trạm</dt>
                        <dd class="col-sm-8" id="deleteTenTram"></dd>
                        <dt class="col-sm-4">Địa Chỉ</dt>
                        <dd class="col-sm-8" id="deleteDiaChi"></dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const tentram = button.getAttribute('data-tentram');
            const diachi = button.getAttribute('data-diachi');
            deleteModal.querySelector('#deleteTramId').value = id;
            deleteModal.querySelector('#deleteTenTram').textContent = tentram;
            deleteModal.querySelector('#deleteDiaChi').textContent = diachi;
        });

        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                if (bsAlert) bsAlert.close();
            });
        }, 3000);
    </script>
}

