@model IEnumerable<AdminDashboard.Models.Tram>

<h2>Danh sách Trạm</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Trạm</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Mã Trạm</th>
            <th>Tên Trạm</th>
            <th>Địa Chỉ</th>
            <th>Tỉnh/Thành</th>
            <th>Quận/Huyện</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdTram</td>
                <td>@item.TenTram</td>
                <td>@item.DiaChiTram</td>
                <td>@item.Tinh</td>
                <td>@item.Huyen</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTram" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.IdTram" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.IdTram" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>