@* //BAOLONG// *@
@using AdminDashboard.Models.TrangThai
@model AdminDashboard.Models.ChuyenXe

@{
    ViewData["Title"] = "Chi tiết Chuyến xe";
}

<div class="details-page-container">
    <div class="details-panel">
        <div class="panel-header">
            <div class="route-start">
                <span>Điểm đi</span>
                <h2>@Model.LoTrinh.TramDiNavigation.TenTram</h2>
            </div>
            <div class="route-arrow">
                <i class="fas fa-long-arrow-alt-right"></i>
            </div>
            <div class="route-end">
                <span>Điểm đến</span>
                <h2>@Model.LoTrinh.TramToiNavigation.TenTram</h2>
            </div>
        </div>

        <div class="panel-body">
            <dl class="details-list">
                <!-- Các detail item hiện có... -->
                <!-- THÊM PHẦN HIỂN THỊ ẢNH -->
                <div class="detail-item">
                    <dt><i class="fas fa-images"></i> Hình ảnh</dt>
                    <dd>
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="row">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <img src="@image.ImageUrl" class="card-img-top"
                                                 style="height: 150px; object-fit: cover;"
                                                 alt="Ảnh chuyến xe">
                                            <div class="card-body text-center">
                                                <small class="text-muted">
                                                    @image.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có hình ảnh</span>
                        }
                    </dd>
                </div>
            </dl>
        </div>

        <div class="panel-footer">
            <a asp-action="Index" class="btn btn-secondary-custom">
                <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.ChuyenId" class="btn btn-edit-custom">
                <i class="fas fa-edit"></i> Chỉnh Sửa
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: url('https://images.unsplash.com/photo-1583417319070-4a69db38a482?ixlib=rb-4.1.0&auto=format&fit=crop&q=80&w=1740') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
    }

    .details-page-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 15px;
        min-height: 100vh;
    }

    .details-panel {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        width: 100%;
        max-width: 800px;
        overflow: hidden;
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px 30px;
        background: linear-gradient(135deg, #ff9800, #ffc107);
        color: #fff;
    }

    .route-start, .route-end {
        flex: 1;
    }

    .route-end {
        text-align: right;
    }

    .panel-header span {
        font-size: 14px;
        font-weight: 500;
        opacity: 0.9;
        text-transform: uppercase;
    }

    .panel-header h2 {
        font-size: 28px;
        font-weight: 700;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .route-arrow {
        font-size: 32px;
        margin: 0 20px;
    }

    .panel-body {
        padding: 30px;
    }

    .details-list {
        margin: 0;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #e9ecef;
    }

        .detail-item:last-child {
            border-bottom: none;
        }

        .detail-item dt {
            font-weight: 600;
            color: #5b6a82;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .detail-item dt i {
                color: #ff9800;
                width: 20px;
                text-align: center;
            }

        .detail-item dd {
            margin: 0;
            font-weight: 500;
            color: #3f4c6b;
        }

    .badge {
        font-size: 12px;
        padding: 6px 12px;
        font-weight: 600;
    }

    .bg-secondary-light {
        background-color: #e2e3e5;
        color: #41464b;
    }

    .bg-success-light {
        background-color: #d1e7dd;
        color: #0a3622;
    }

    .bg-warning-light {
        background-color: #fff3cd;
        color: #664d03;
    }

    .bg-info-light {
        background-color: #cff4fc;
        color: #055160;
    }

    .bg-danger-light {
        background-color: #f8d7da;
        color: #58151c;
    }


    .panel-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 30px;
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }

    .btn-edit-custom, .btn-secondary-custom {
        padding: 10px 22px;
        font-weight: 600;
        font-size: 15px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-edit-custom {
        background-color: #ffc107;
        color: #212529;
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }

        .btn-edit-custom:hover {
            background-color: #ffb300;
            transform: translateY(-2px);
        }

    .btn-secondary-custom {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary-custom:hover {
            background-color: #5a6268;
        }

        .btn-edit-custom i, .btn-secondary-custom i {
            margin-right: 8px;
        }
</style>