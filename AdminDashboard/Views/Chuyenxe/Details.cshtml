@using AdminDashboard.Models.TrangThai
@model AdminDashboard.Models.ChuyenXe

@{
    ViewData["Title"] = "Chi tiết Chuyến xe";
}


<div class="details-page-container">
    <div class="details-panel">
        <div class="panel-header">
            <div class="route-start">
                <span>Điểm đi</span>
                <h2>@Model.LoTrinh.TramDiNavigation.TenTram</h2>
            </div>
            <div class="route-arrow">
                <i class="fas fa-long-arrow-alt-right"></i>
            </div>
            <div class="route-end">
                <span>Điểm đến</span>
                <h2>@Model.LoTrinh.TramToiNavigation.TenTram</h2>
            </div>
        </div>

        <div class="panel-body">
            <dl class="details-list">
                <!-- Các detail item hiện có... -->
                <!-- THÊM PHẦN HIỂN THỊ ẢNH -->
                <div class="detail-item">
                    <dt><i class="fas fa-images"></i> Hình ảnh</dt>
                    <dd>
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="row">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="col-md-3 mb-3">
                                        <div class="card">
                                            <img src="@image.ImageUrl" class="card-img-top"
                                                 style="height: 150px; object-fit: cover;"
                                                 alt="Ảnh chuyến xe">
                                            <div class="card-body text-center">
                                                <small class="text-muted">
                                                    @image.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có hình ảnh</span>
                        }
                    </dd>
                </div>
            </dl>
        </div>

        <div class="panel-footer">
            <a asp-action="Index" class="btn btn-secondary-custom">
                <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.ChuyenId" class="btn btn-edit-custom">
                <i class="fas fa-edit"></i> Chỉnh Sửa
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: url('https://images.unsplash.com/photo-1583417319070-4a69db38a482?ixlib=rb-4.1.0&auto=format&fit=crop&q=80&w=1740') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
    }

    .details-page-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 15px;
        min-height: 100vh;
    }

    .details-panel {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        width: 100%;
        max-width: 800px;
        overflow: hidden;
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px 30px;
        background: linear-gradient(135deg, #ff9800, #ffc107);
        color: #fff;
    }

    .route-start, .route-end {
        flex: 1;
    }

    .route-end {
        text-align: right;
    }


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background: url('https://images.unsplash.com/photo-1583417319070-4a69db38a482?ixlib=rb-4.1.0&auto=format&fit=crop&q=80&w=1740') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Roboto, sans-serif;
            min-height: 100vh;
            color: #111827;
        }

        h2 {
            text-align: center;
            font-size: 38px;
            font-weight: 700;
            color: #111827;
            text-transform: uppercase;
            margin-top: 40px;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .details-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            padding: 40px 50px;
            max-width: 900px;
            margin: 0 auto;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid #e5e7eb;
            padding: 12px 0;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-weight: 600;
            font-size: 16px;
            color: #1f2937;
            width: 35%;
        }

        .detail-value {
            font-size: 16px;
            color: #374151;
            text-align: right;
            width: 60%;
        }

        .btn {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background-color: #3b82f6;
            border: none;
        }

            .btn-primary:hover {
                background-color: #2563eb;
                transform: scale(1.03);
                transition: 0.2s;
            }

        .btn-secondary {
            background-color: #e5e7eb;
            color: #111827;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #d1d5db;
                transform: scale(1.03);
                transition: 0.2s;
            }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 900px;
            margin: 20px auto 10px;
        }

        .back-icon {
            color: #dc2626;
            transition: transform 0.2s ease;
            text-decoration: none;
        }

            .back-icon:hover {
                transform: scale(1.3);
            }

        img {
            transition: transform 0.2s ease;
        }

            img:hover {
                transform: scale(1.05);
            }

        .custom-hr {
            max-width: 900px;
            height: 3px;
            background-color: aqua;
            border: none;
            border-radius: 3px;
            margin: 0 auto 30px;
        }

    </style>
</head>

<body>
    <!-- Thanh tiêu đề trên cùng -->
    <div class="top-bar">
        <a asp-action="Index" class="back-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                 class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                <path fill-rule="evenodd"
                      d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
            </svg>
        </a>
    </div>

    <!-- Tiêu đề ngoài khung -->
    <h2>Chi tiết Chuyến Xe</h2>
    <hr class="custom-hr" />
    <!-- Nội dung chi tiết -->
    <div class="details-card">
        <div class="detail-item">
            <div class="detail-label">Xe</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Xe.BienSoXe)</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Ngày Đi</div>
            <div class="detail-value">@Model.NgayDi.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Giờ Đi</div>
            <div class="detail-value">@Model.GioDi.ToString(@"hh\:mm")</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Giờ Đến Dự Kiến</div>
            <div class="detail-value">@Model.GioDenDuKien.ToString(@"hh\:mm")</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Trạng Thái</div>
            <div class="detail-value">@Html.DisplayFor(model => model.TrangThai)</div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.ChuyenId" class="btn btn-primary me-2 px-4">Chỉnh sửa</a>
        </div>
    </div>
</body>
