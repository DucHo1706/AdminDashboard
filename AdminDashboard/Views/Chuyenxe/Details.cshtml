@* Vị trí: Views/ChuyenXe/Details.cshtml *@
@model AdminDashboard.Models.ChuyenXe

@{
    ViewData["Title"] = "Chi tiết Chuyến xe";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Lộ Trình</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.LoTrinh.LoTrinhId)</dd>

        <dt class="col-sm-3">Xe</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Xe.BienSoXe)</dd>

        <dt class="col-sm-3">Ngày Đi</dt>
        <dd class="col-sm-9">@Model.NgayDi.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Giờ Đi</dt>
        <dd class="col-sm-9">@Model.GioDi.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-3">Giờ Đến Dự Kiến</dt>
        <dd class="col-sm-9">@Model.GioDenDuKien.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-3">Trạng Thái</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ChuyenId" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>