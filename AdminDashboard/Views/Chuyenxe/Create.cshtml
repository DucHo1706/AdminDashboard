@using AdminDashboard.Models.TrangThai
@model AdminDashboard.Models.ChuyenXe

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background: url('https://images.unsplash.com/photo-1583417319070-4a69db38a482?ixlib=rb-4.1.0&auto=format&fit=crop&q=80&w=1740') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            font-family: 'Segoe UI', Roboto, sans-serif;
        }

        h2 {
            text-align: center;
            font-size: 38px;
            font-weight: 700;
            color: #111827;
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .form {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 85vh;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 50px 60px;
            border-radius: 16px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.2);
            width: 95%;
            max-width: 700px;
        }

        .form-group-custom {
            margin-bottom: 22px;
        }

        .control-label {
            font-weight: 600;
            color: #4a5568;
            margin-bottom: 6px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .control-label i {
                color: #ff9800;
            }

        .form-control,
        .form-select {
            height: 45px;
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 0 14px;
            font-size: 15px;
            transition: 0.2s ease;
        }

            .form-control:focus,
            .form-select:focus {
                border-color: #ff9800;
                box-shadow: 0 0 0 3px rgba(255, 152, 0, 0.2);
                outline: none;
            }

        button {
            position: relative;
            padding: 12px 24px;
            border-radius: 8px;
            border: 1px solid #FF6633;
            font-size: 15px;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
            background: transparent;
            color: black;
            overflow: hidden;
            transition: all 0.25s ease;
        }

            button:hover {
                background: #FF6633;
                box-shadow: 0 0 20px 5px #FF9933;
                color: white;
            }

        a.text-decoration-none {
            color: #ff6633;
            transition: transform 0.2s ease;
        }

            a.text-decoration-none:hover {
                transform: scale(1.2);
            }

        hr {
            border: none;
            height: 1px;
            background-color: #ccc;
            margin-bottom: 20px;
        }

        .text-center {
            text-align: center;
        }

        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: -10px;
            margin-bottom: 10px;
        }

            .logo-wrapper img {
                width: 130px;
                height: 38px;
            }
    </style>
</head>

<body>
    <h2>Tạo Chuyến Xe Mới</h2>
    <hr />
    <div class="form">
        <div class="form-container">
            <form asp-action="Create" class="form-submit-once">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="header-bar mb-3">
                    <a asp-action="Index" class="text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                             class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                            <path fill-rule="evenodd"
                                  d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                        </svg>
                    </a>
                    <!-- để trống bên phải cho cân đối -->
                    <div style="width:18px;"></div>
                </div>

                <div class="logo-wrapper">
                    <img src="~/css/Images/logo_web.png" alt="Logo" />
                </div>

                <hr class="bg-black" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="LoTrinhId" class="control-label">
                                <i class="fas fa-route"></i> Lộ trình
                            </label>
                            <select asp-for="LoTrinhId" class="form-select" asp-items="ViewBag.LoTrinhId">
                                <option value="">-- Chọn lộ trình --</option>
                            </select>
                            <span asp-validation-for="LoTrinhId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="XeId" class="control-label">
                                <i class="fas fa-bus"></i> Xe
                            </label>
                            <select asp-for="XeId" class="form-select" asp-items="ViewBag.XeId">
                                <option value="">-- Chọn xe --</option>
                            </select>
                            <span asp-validation-for="XeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="NgayDi" class="control-label">
                                <i class="fas fa-calendar-alt"></i> Ngày đi
                            </label>
                            <input asp-for="NgayDi" class="form-control" type="date" />
                            <span asp-validation-for="NgayDi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="GioDi" class="control-label">
                                <i class="fas fa-clock"></i> Giờ đi
                            </label>
                            <input asp-for="GioDi" class="form-control" type="time" />
                            <span asp-validation-for="GioDi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="GioDenDuKien" class="control-label">
                                <i class="fas fa-hourglass-half"></i> Giờ đến dự kiến
                            </label>
                            <input asp-for="GioDenDuKien" class="form-control" type="time" />
                            <span asp-validation-for="GioDenDuKien" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="TrangThai" class="control-label">
                                <i class="fas fa-check-circle"></i> Trạng thái
                            </label>
                            <select asp-for="TrangThai" asp-items="Html.GetEnumSelectList<TrangThaiChuyenXe>()" class="form-select">
                                <option value="">-- Chọn trạng thái --</option>
                            </select>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit">Tạo mới</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>