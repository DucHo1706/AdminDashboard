@* Vị trí: Views/ChuyenXe/Index.cshtml *@
@model IEnumerable<AdminDashboard.Models.ChuyenXe>

@{
    ViewData["Title"] = "Danh sách Chuyến xe";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo Chuyến xe mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <th>Lộ Trình</th>
            <th>Biển Số Xe</th>
            <th>Ngày Đi</th>
            <th>Giờ Đi</th>
			<th>Thời gian dự kiến</th>
            <th>Tài xế</th>
            <th>Trạng Thái</th>
            <th>Hành động</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.LoTrinh?.TramDiNavigation?.TenTram) -> @(item.LoTrinh?.TramToiNavigation?.TenTram)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Xe.BienSoXe)
                </td>

                <td>
                    @item.NgayDi.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.GioDi.ToString(@"hh\:mm")
                </td>
                <td>
                    @item.GioDenDuKien.ToString(@"hh\:mm")
                </td>
                <td>
                    @if (item.TaiXe != null)
                    {
                        <span class="fw-bold">@item.TaiXe.HoTen</span>
                    }
                    else
                    {
                        <span class="text-muted"><em>Chưa phân công</em></span>
                    }
                </td>
                <td>
                 
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                  
                    @if (item.TaiXeId == null)
                    {
                        <a asp-action="AssignDriver" asp-route-id="@item.ChuyenId" class="btn btn-sm btn-success">Phân công</a>
                    }
                    else
                    {
                        <a asp-action="AssignDriver" asp-route-id="@item.ChuyenId" class="btn btn-sm btn-warning">Đổi tài xế</a>
                    }

                    <a asp-action="Edit" asp-route-id="@item.ChuyenId" class="btn btn-sm btn-outline-primary">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.ChuyenId" class="btn btn-sm btn-outline-info">Chi tiết</a>              
                    <a asp-action="Delete" asp-route-id="@item.ChuyenId" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>