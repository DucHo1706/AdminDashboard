@model AdminDashboard.Models.KhachHang

<h2>Thêm Khách Hàng</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TenKhachHang" class="control-label"></label>
        <input asp-for="TenKhachHang" class="form-control" />
        <span asp-validation-for="TenKhachHang" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="DiaChiMail" class="control-label"></label>
        <input asp-for="DiaChiMail" class="form-control" />
        <span asp-validation-for="DiaChiMail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button> |
    <a asp-action="Index">Quay lại</a>
</form>
