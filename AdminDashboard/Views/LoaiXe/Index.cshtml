@* //GOSIX - TanHuy // *@
@model IEnumerable<AdminDashboard.Models.LoaiXe>

@{
    ViewData["Title"] = "Quản Lý Loại Xe";
}

<div class="vehicle-type-page">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-bus"></i> @ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-add-new">
            <i class="fas fa-plus-circle"></i> Thêm Loại Xe
        </a>
    </div>

    <div class="content-panel">
        <div class="table-responsive">
            <table class="table vehicle-type-table">
                <thead>
                    <tr>
                        <th>Mã Loại Xe</th>
                        <th>Tên Loại Xe</th>
                        <th class="text-center">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="id-badge">@item.LoaiXeId</span>
                            </td>
                            <td class="vehicle-name">@item.TenLoaiXe</td>
                            <td class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.LoaiXeId" class="btn-action btn-edit" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.LoaiXeId" class="btn-action btn-details" title="Chi tiết">
                                    <i class="bi bi-list-ul"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.LoaiXeId" class="btn-action btn-delete" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Poppins', sans-serif;
    }

    .vehicle-type-page {
        padding: 30px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-weight: 700;
        font-size: 28px;
        color: #3f4c6b;
    }

        .page-title i {
            color: #ff9800;
            margin-right: 12px;
        }

    .btn-add-new {
        background-color: #ff9800;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
        box-shadow: 0 4px 12px rgba(255, 152, 0, 0.4);
        transition: all 0.3s ease;
    }

        .btn-add-new:hover {
            background-color: #f57c00;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255, 152, 0, 0.5);
        }

    .content-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 20px;
    }

    .vehicle-type-table {
        border-collapse: collapse;
        width: 100%;
    }

        .vehicle-type-table thead th {
            border: none;
            padding: 15px 20px;
            color: #8c96a5;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            text-align: left;
            border-bottom: 2px solid #eef0f4;
        }

        .vehicle-type-table tbody tr {
            border-bottom: 1px solid #eef0f4;
            transition: background-color 0.2s ease;
        }

            .vehicle-type-table tbody tr:last-child {
                border-bottom: none;
            }

            .vehicle-type-table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .vehicle-type-table tbody td {
            border: none;
            padding: 18px 20px;
            vertical-align: middle;
            color: #5b6a82;
        }

    .id-badge {
        background-color: #eef0f4;
        color: #5b6a82;
        padding: 6px 12px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 13px;
    }

    .vehicle-name {
        font-weight: 600;
        font-size: 15px;
        color: #374151;
    }

    /* ==== PHẦN HÀNH ĐỘNG - ĐÃ CHỈNH ĐẸP VÀ CÂN ==== */
    .action-buttons {
        text-align: center;
        display: flex;
        gap: 8px;
        justify-content: center;
        align-items: center;
    }

    .btn-action {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #555;
        background: transparent;
        border: 2px solid;
        transition: all 0.3s ease;
        position: relative;
    }

        .btn-action i {
            font-size: 16px;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            color: white;
        }

    .btn-edit {
        border-color: #28a745;
        color: #28a745;
    }

        .btn-edit:hover {
            background-color: #28a745;
        }

    .btn-details {
        border-color: #17a2b8;
        color: #17a2b8;
    }

        .btn-details:hover {
            background-color: #17a2b8;
        }

    .btn-delete {
        border-color: #dc3545;
        color: #dc3545;
    }

        .btn-delete:hover {
            background-color: #dc3545;
        }
</style>
