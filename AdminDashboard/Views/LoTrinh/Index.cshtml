@* //BAOLONG// *@
@model IEnumerable<AdminDashboard.Models.LoTrinh>

@{
    ViewData["Title"] = "Quản Lý Lộ Trình";
}

<div class="route-management-page">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-map-signs"></i> @ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-add-new">
            <i class="fas fa-plus"></i> Thêm Lộ Trình Mới
        </a>
    </div>

    <div class="content-panel">
        <div class="table-responsive">
            <table class="table route-table">
                <thead>
                    <tr>
                        <th>Mã Lộ Trình</th>
                        <th>Trạm Đi</th>
                        <th>Trạm Đến</th>
                        <th class="text-end">Giá Vé Cố Định</th>
                        <th class="text-center">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="id-badge">@item.LoTrinhId</span>
                            </td>
                            <td class="route-point">
                                @item.TramDiNavigation.TenTram
                            </td>
                            <td class="route-point">
                                @item.TramToiNavigation.TenTram
                            </td>
                            <td class="text-end">
                                <span class="price-tag">@String.Format("{0:N0}", item.GiaVeCoDinh) VNĐ</span>
                            </td>
                            <td class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.LoTrinhId" class="btn-action btn-edit" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.LoTrinhId" class="btn-action btn-details" title="Chi tiết">
                                    <i class="fas fa-list-alt"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.LoTrinhId" class="btn-action btn-delete" title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Poppins', sans-serif;
    }

    .route-management-page {
        padding: 30px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .page-title {
        font-weight: 700;
        font-size: 28px;
        color: #3f4c6b;
    }

        .page-title i {
            color: #ff9800;
            margin-right: 12px;
        }

    .btn-add-new {
        background-color: #ff9800;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        font-size: 15px;
        text-decoration: none;
        box-shadow: 0 4px 12px rgba(255, 152, 0, 0.4);
        transition: all 0.3s ease;
    }

        .btn-add-new:hover {
            background-color: #f57c00;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255, 152, 0, 0.5);
        }

        .btn-add-new i {
            margin-right: 8px;
        }

    .content-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 20px;
    }

    .route-table {
        border-collapse: collapse;
        width: 100%;
    }

        .route-table thead th {
            border: none;
            padding: 15px 20px;
            color: #8c96a5;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
            text-align: left;
            border-bottom: 2px solid #eef0f4;
        }

        .route-table tbody tr {
            border-bottom: 1px solid #eef0f4;
            transition: background-color 0.2s ease;
        }

            .route-table tbody tr:last-child {
                border-bottom: none;
            }

            .route-table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .route-table tbody td {
            border: none;
            padding: 20px;
            vertical-align: middle;
            color: #5b6a82;
        }

    .id-badge {
        background-color: #eef0f4;
        color: #5b6a82;
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: 600;
        font-size: 13px;
    }

    .route-point {
        font-weight: 600;
        font-size: 15px;
    }

    .price-tag {
        background-color: #d1e7dd; /* Light green */
        color: #0a3622; /* Dark green */
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 700;
        font-size: 14px;
    }

    .action-buttons {
        text-align: center;
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-action {
        width: 38px;
        height: 38px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #5b6a82;
        background: #eef0f4;
        transition: all 0.2s ease;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-edit:hover {
        background-color: #0d6efd;
    }
    /* Blue */
    .btn-details:hover {
        background-color: #0dcaf0;
    }
    /* Cyan */
    .btn-delete:hover {
        background-color: #dc3545;
    }
    /* Red */

</style>