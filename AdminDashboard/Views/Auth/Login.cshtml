@model AdminDashboard.Models.Login.DangNhap

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Đăng nhập</h2>
            <hr />

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TenDangNhap" class="form-label"></label>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MatKhau" class="form-label"></label>
                    <input asp-for="MatKhau" class="form-control" type="password" placeholder="Mật khẩu" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
