@model AdminDashboard.Models.NguoiDung

@{
    string dynamicLayout = "";
    if (User.IsInRole("Admin"))
    {
        dynamicLayout = "_Layout";
    }
    else
    {
        dynamicLayout = "_Layout_User";
    }
    Layout = dynamicLayout;
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    /* Card Design */
    .profile-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        overflow: hidden;
        border: none;
        margin-top: 20px;
    }

    /* Header Banner */
    .profile-header {
        height: 160px;
        background: linear-gradient(135deg, #ff6600, #ff9e42);
        position: relative;
    }

    /* Avatar Circle */
    .avatar-wrapper {
        position: absolute;
        bottom: -50px;
        left: 50%;
        transform: translateX(-50%);
        width: 110px;
        height: 110px;
        background: #fff;
        border-radius: 50%;
        padding: 5px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    
    .avatar-img {
        width: 100%;
        height: 100%;
        background-color: #eee;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: #ff6600;
        background-image: url('https://ui-avatars.com/api/?name=@(Model?.HoTen ?? "User")&background=random&size=128');
        background-size: cover;
    }

    /* Content Area */
    .profile-body {
        padding: 60px 40px 40px 40px;
    }

    .user-name {
        text-align: center;
        font-weight: 800;
        color: #333;
        margin-bottom: 5px;
    }
    
    .user-role {
        text-align: center;
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 30px;
    }

    /* Info Items */
    .info-group {
        background-color: #fdfdfd;
        border: 1px solid #f1f1f1;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .info-row {
        display: flex;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px dashed #eee;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-icon {
        width: 35px;
        height: 35px;
        background: #fff3e6;
        color: #ff6600;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.1rem;
    }

    .info-content {
        flex: 1;
    }

    .info-label {
        font-size: 0.85rem;
        color: #888;
        display: block;
        margin-bottom: 2px;
    }

    .info-value {
        font-weight: 600;
        color: #333;
        font-size: 1rem;
    }

    /* Form Styles */
    .edit-section {
        background-color: #fff8f3;
        border: 2px solid #ffead4;
        border-radius: 15px;
        padding: 25px;
        margin-top: 30px;
        display: none;
        animation: fadeIn 0.4s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .btn-main {
        background: linear-gradient(to right, #ff6600, #ff8533);
        border: none;
        color: white;
        padding: 10px 30px;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
        transition: all 0.3s;
    }

    .btn-main:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 102, 0, 0.4);
        color: white;
    }

    .btn-secondary-custom {
        background: #e9ecef;
        color: #495057;
        border: none;
        padding: 10px 30px;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-secondary-custom:hover {
        background: #dee2e6;
        color: #212529;
    }

</style>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            
            <div class="profile-card">
                <div class="profile-header">
                    <div class="avatar-wrapper">
                        <div class="avatar-img" title="@Model?.HoTen"></div> 
                    </div>
                </div>

                <div class="profile-body">
                    @if (Model == null)
                    {
                        <div class="alert alert-danger text-center">Không tìm thấy thông tin tài khoản.</div>
                    }
                    else
                    {
                        <h3 class="user-name">@Model.HoTen</h3>
                        <p class="user-role"><i class="bi bi-shield-check"></i> @(User.IsInRole("Admin") ? "Quản trị viên" : (User.IsInRole("TaiXe") ? "Tài xế đối tác" : "Khách hàng"))</p>

                        <div id="display-area">
                            <div class="info-group">
                                <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px; font-weight: 700;">Thông tin cá nhân</h6>
                                
                                <div id="account-info">
                                    <div class="info-row">
                                        <div class="info-icon"><i class="bi bi-person"></i></div>
                                        <div class="info-content">
                                            <span class="info-label">Họ và tên</span>
                                            <span class="info-value">@Model.HoTen</span>
                                        </div>
                                    </div>

                                    <div class="info-row">
                                        <div class="info-icon"><i class="bi bi-envelope"></i></div>
                                        <div class="info-content">
                                            <span class="info-label">Email</span>
                                            <span class="info-value">@Model.Email</span>
                                        </div>
                                    </div>

                                    <div class="info-row">
                                        <div class="info-icon"><i class="bi bi-telephone"></i></div>
                                        <div class="info-content">
                                            <span class="info-label">Số điện thoại</span>
                                            <span class="info-value">@(Model.SoDienThoai ?? "Chưa cập nhật")</span>
                                        </div>
                                    </div>

                                    <div class="info-row">
                                        <div class="info-icon"><i class="bi bi-calendar3"></i></div>
                                        <div class="info-content">
                                            <span class="info-label">Ngày sinh</span>
                                            <span class="info-value">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</span>
                                        </div>
                                    </div>
                                    
                                    <div class="info-row">
                                        <div class="info-icon"><i class="bi bi-activity"></i></div>
                                        <div class="info-content">
                                            <span class="info-label">Trạng thái</span>
                                            <span class="badge bg-success rounded-pill">@Model.TrangThai</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if(User.IsInRole("TaiXe") || User.IsInRole("Admin"))
                            {
                                <div class="info-group">
                                    <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px; font-weight: 700;">Thông tin nghiệp vụ</h6>
                                    @await Component.InvokeAsync("TaiXeInfo", new { userId = Model.UserId })
                                </div>
                            }

                            <div class="text-center">
                                <button id="btnShowForm" class="btn btn-main"><i class="bi bi-pencil-square me-2"></i>Cập nhật hồ sơ</button>
                            </div>
                        </div>

                        <form id="editForm" class="edit-section">
                            <h5 class="text-center mb-4 text-primary-emphasis fw-bold">Chỉnh sửa thông tin</h5>
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="UserId" value="@Model.UserId" />
                            <input type="hidden" name="MatKhau" value="@Model.MatKhau" />

                            <div class="form-floating mb-3">
                                <input type="text" name="HoTen" class="form-control" id="floatName" value="@Model.HoTen" placeholder="Họ tên" required>
                                <label for="floatName">Họ và tên</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="email" name="Email" class="form-control" id="floatEmail" value="@Model.Email" placeholder="name@example.com" required>
                                <label for="floatEmail">Email đăng nhập</label>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" name="SoDienThoai" class="form-control" id="floatPhone" value="@Model.SoDienThoai" placeholder="Số điện thoại">
                                        <label for="floatPhone">Số điện thoại</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="date" name="NgaySinh" class="form-control" id="floatDob" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")">
                                        <label for="floatDob">Ngày sinh</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center gap-3 mt-3">
                                <button type="button" id="btnCancel" class="btn btn-secondary-custom">Hủy bỏ</button>
                                <button type="submit" class="btn btn-main">Lưu thay đổi</button>
                            </div>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $("#btnShowForm").click(function () {
            $("#display-area .text-center").slideUp();
            $("#editForm").slideDown();
        });

        $("#btnCancel").click(function () {
            $("#editForm").slideUp();
            $("#display-area .text-center").slideDown(); 
        });

        $("#editForm").submit(function (e) {
            e.preventDefault();

            const $btnSubmit = $(this).find('button[type="submit"]');
            const originalText = $btnSubmit.text();
            $btnSubmit.prop('disabled', true).text('Đang lưu...');

            $.ajax({
                url: '@Url.Action("EditAccount", "Auth")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        const data = {
                            hoTen: $("input[name='HoTen']").val(),
                            email: $("input[name='Email']").val(),
                            phone: $("input[name='SoDienThoai']").val() || "Chưa cập nhật",
                            ngsinhInput: $("input[name='NgaySinh']").val()
                        };
                        
                        let displayDob = "Chưa cập nhật";
                        if(data.ngsinhInput) {
                            const dateObj = new Date(data.ngsinhInput);
                            if(!isNaN(dateObj)) {
                                displayDob = dateObj.toLocaleDateString('vi-VN'); 
                            }
                        }

                        $(".user-name").text(data.hoTen);
                        $(".avatar-img").css("background-image", `url('https://ui-avatars.com/api/?name=${encodeURIComponent(data.hoTen)}&background=random&size=128')`);

                        $("#account-info").html(`
                            <div class="info-row">
                                <div class="info-icon"><i class="bi bi-person"></i></div>
                                <div class="info-content">
                                    <span class="info-label">Họ và tên</span>
                                    <span class="info-value">${data.hoTen}</span>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-icon"><i class="bi bi-envelope"></i></div>
                                <div class="info-content">
                                    <span class="info-label">Email</span>
                                    <span class="info-value">${data.email}</span>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-icon"><i class="bi bi-telephone"></i></div>
                                <div class="info-content">
                                    <span class="info-label">Số điện thoại</span>
                                    <span class="info-value">${data.phone}</span>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-icon"><i class="bi bi-calendar3"></i></div>
                                <div class="info-content">
                                    <span class="info-label">Ngày sinh</span>
                                    <span class="info-value">${displayDob}</span>
                                </div>
                            </div>
                             <div class="info-row">
                                <div class="info-icon"><i class="bi bi-activity"></i></div>
                                <div class="info-content">
                                    <span class="info-label">Trạng thái</span>
                                    <span class="badge bg-success rounded-pill">Hoạt động</span>
                                </div>
                            </div>
                        `);

                        $("#editForm").slideUp();
                        $("#display-area .text-center").slideDown();
                        
                        alert(res.message);
                    } else {
                        alert('Cập nhật thất bại: ' + res.message);
                    }
                },
                error: function () {
                    alert('Lỗi kết nối tới máy chủ.');
                },
                complete: function() {
                    $btnSubmit.prop('disabled', false).text(originalText);
                }
            });
        });
    });
</script>