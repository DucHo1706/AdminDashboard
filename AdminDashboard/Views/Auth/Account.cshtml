
@model AdminDashboard.Models.NguoiDung

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<head>
    <meta charset="UTF-8">
    <title>Responsive Sidebar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="text-white p-3" style="width: 250px; min-height: 250px; background-color:orange; justify-content:start; align-items:center; margin-top: 100px">
            <h4 class="mb-4">Menu</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Thông tin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Liên hệ</a>
                </li>
            </ul>
        </div>
        <div class="container mt-5 flex-grow-1 p-4">
        <h2 class="text-center mb-4">Thông tin tài khoản</h2>
        <div class="card shadow-sm">
            <div class="card-body">
                @if (Model == null)
                {
                    <div class="alert alert-danger" role="alert">
                        Không tìm thấy thông tin tài khoản.
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <dl class="row">
                                <dt class="col-sm-4">Tên đăng nhập:</dt>
                                <dd class="col-sm-8">@Model.TenDangNhap</dd>

                                <dt class="col-sm-4">Họ tên:</dt>
                                <dd class="col-sm-8">@Model.HoTen</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Số điện thoại:</dt>
                                <dd class="col-sm-8">@(Model.SoDienThoai ?? "Chưa cung cấp")</dd>

                                <dt class="col-sm-4">Ngày sinh:</dt>
                                <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cung cấp")</dd>

                                <dt class="col-sm-4">Trạng thái:</dt>
                                <dd class="col-sm-8">@Model.TrangThai</dd>
                            </dl>
                            <div class="text-center mt-4">
                                <a asp-controller="Auth" asp-action="EditAccount" class="btn btn-warning me-2">Chỉnh sửa</a>
                                <a asp-controller="Home_User" asp-action="Home_User" class="btn btn-primary">Quay lại</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    </div>
</body>

