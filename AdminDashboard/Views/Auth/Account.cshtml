
@model AdminDashboard.Models.NguoiDung

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Thông tin tài khoản</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model == null)
            {
                <div class="alert alert-danger" role="alert">
                    Không tìm thấy thông tin tài khoản.
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <dl class="row">
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Họ tên:</dt>
                            <dd class="col-sm-8">@Model.HoTen</dd>

                            <dt class="col-sm-4">Họ tên:</dt>
                            <dd class="col-sm-8">@Model.HoTen</dd>

                            <dt class="col-sm-4">Số điện thoại:</dt>
                            <dd class="col-sm-8">@(Model.SoDienThoai ?? "Chưa cung cấp")</dd>

                            <dt class="col-sm-4">Ngày sinh:</dt>
                            <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cung cấp")</dd>

                            <dt class="col-sm-4">Trạng thái:</dt>
                            <dd class="col-sm-8">@Model.TrangThai</dd>

                            <dt class="col-sm-4">Vai trò:</dt>
                            <dd class="col-sm-8">@ViewData["VaiTro"]</dd>
                        </dl>
                        <div class="text-center mt-4">
                            <a asp-controller="Home_User" asp-action="EditAccount" class="btn btn-warning me-2">Chỉnh sửa</a>
                            <a asp-controller="Home_User" asp-action="Home_User" class="btn btn-primary">Quay lại</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
