@model AdminDashboard.Models.Login.ResetPasswordRequest

@{
    Layout = null;
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoSix – Đi nhanh, sống trọn</title>

    <link rel="shortcut icon" href="~/css/images/icon_logo.png" type="image/x-icon" />
    <link rel="icon" href="~/css/images/icon_logo.png" type="image/png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        /* CSS tùy chỉnh cho giao diện sang trọng (Cam, Vàng, Trắng) */

        html, body {
            height: 100%;
        }

        body {
            font-family: 'Manrope', sans-serif;
            background-color: #FCFAF8; /* Nền trắng-kem ấm */
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        /* Thẻ Card chính */
        .auth-card {
            background-color: #FFFFFF;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.07);
            padding: 2.5rem 3rem;
            max-width: 480px;
            width: 100%;
        }

        /* Logo */
        .auth-logo img {
            width: 70px;
            margin-bottom: 1.5rem;
        }

        /* Tiêu đề */
        .auth-title {
            font-size: 2rem;
            font-weight: 700;
            color: #333333;
        }

        /* Chữ mô tả (hiển thị email) */
        .auth-subtitle {
            color: #777777;
            margin-bottom: 2rem;
            font-size: 1rem;
        }

        /* Nhãn của input */
        .form-label-custom {
            font-weight: 600;
            color: #4A4A4A;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        /* Ô input */
        .form-control-custom {
            font-size: 1rem;
            padding: 0.9rem 1.25rem;
            border: 1px solid #EAEAEA;
            border-radius: 0.5rem;
            background-color: #FDFDFD;
            box-shadow: none;
            transition: all 0.3s ease;
        }
            /* Hiệu ứng "Glow" VÀNG khi focus */
            .form-control-custom:focus {
                border-color: #FDBB2D;
                box-shadow: 0 0 0 0.25rem rgba(253, 187, 45, 0.25);
            }

        /* Cải tiến: Icon Hiện/Ẩn mật khẩu */
        .password-wrapper {
            position: relative;
        }

        .password-toggle-icon {
            position: absolute;
            top: 50%;
            right: 1.25rem;
            transform: translateY(-50%);
            color: #adb5bd;
            cursor: pointer;
            transition: color 0.2s ease;
        }

            .password-toggle-icon:hover {
                color: #555;
            }

        .form-control-password {
            padding-right: 3.5rem;
        }

        /* Cải tiến: Thanh đo độ mạnh mật khẩu */
        .password-strength-meter {
            height: 6px;
            background-color: #f0f0f0;
            border-radius: 3px;
            overflow: hidden;
            margin-top: 0.75rem;
        }

        .strength-bar {
            height: 100%;
            transition: all 0.4s ease;
            width: 0%; /* Bắt đầu bằng 0 */
        }

            .strength-bar.strength-weak {
                width: 25%;
                background-color: #dc3545;
            }

            .strength-bar.strength-medium {
                width: 60%;
                background-color: #ffc107;
            }

            .strength-bar.strength-strong {
                width: 100%;
                background-color: #28a745;
            }

        .strength-text {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        /* Nút bấm chính (Tông màu CAM-VÀNG) */
        .btn-primary-custom {
            background-image: linear-gradient(45deg, #F58529 0%, #FDBB2D 100%);
            border: none;
            color: #ffffff;
            padding: 0.85rem 1.5rem;
            font-weight: 700;
            font-size: 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(245, 133, 41, 0.2);
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 7px 20px rgba(245, 133, 41, 0.35);
                color: #ffffff;
            }

        /* Nút bấm phụ (Quay lại) */
        .btn-secondary-custom {
            background-color: transparent;
            border: none;
            color: #777777;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .btn-secondary-custom:hover {
                color: #F58529;
            }

        /* Tùy chỉnh Alert báo lỗi */
        .alert-danger {
            background-color: #fff8f8;
            border-color: #fdd;
            color: #d9534f;
            border-radius: 0.5rem;
        }

    </style>
</head>
<body>

    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">

                <div class="auth-card">
                    <div class="text-center auth-logo">
                        <img src="~/css/images/icon_logo.png" alt="GoSix Logo" />
                    </div>

                    <h3 class="auth-title text-center mb-2">Tạo mật khẩu mới</h3>
                    <p class="auth-subtitle text-center">
                        Đặt lại mật khẩu cho tài khoản: <strong class="text-dark">@Model.Email</strong>
                    </p>

                    <form asp-action="ResetPasswordWithOtp" method="post" id="reset-form">

                        <input asp-for="Email" type="hidden" />
                        <input asp-for="OtpCode" type="hidden" />

                        @* Chỉ hiển thị lỗi validation cho mật khẩu, không hiển thị lỗi OTP *@
                        @{
                            var errorsToShow = ViewData.ModelState
                                .Where(kvp => (kvp.Key == "NewPassword" || kvp.Key == "ConfirmPassword") && kvp.Value != null)
                                .SelectMany(kvp => kvp.Value!.Errors)
                                .ToList();

                            if (errorsToShow.Any())
                            {
                                <div class="alert alert-danger" role="alert">
                                    <h5 class="alert-heading" style="font-size: 1.1rem; font-weight: 700;">
                                        <i class="fas fa-exclamation-triangle me-2"></i> Có lỗi xảy ra
                                    </h5>
                                    <ul style="margin-bottom: 0;">
                                        @foreach (var error in errorsToShow)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }
                        }

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label-custom">Mật khẩu mới</label>
                            <div class="password-wrapper">
                                <input asp-for="NewPassword" class="form-control form-control-custom form-control-password" type="password" placeholder="Nhập mật khẩu mới" required />
                                <i class="fas fa-eye password-toggle-icon" id="toggleNewPassword"></i>
                            </div>
                            <div class="password-strength-meter">
                                <div id="strength-bar" class="strength-bar"></div>
                            </div>
                            <div id="strength-text" class="strength-text text-muted"></div>
                            <span asp-validation-for="NewPassword" class="text-danger mt-1 d-block" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label-custom">Xác nhận mật khẩu</label>
                            <div class="password-wrapper">
                                <input asp-for="ConfirmPassword" class="form-control form-control-custom form-control-password" type="password" placeholder="Nhập lại mật khẩu" required />
                                <i class="fas fa-eye password-toggle-icon" id="toggleConfirmPassword"></i>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger mt-1 d-block" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="fas fa-save me-2"></i> Lưu mật khẩu mới
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-controller="Auth" asp-action="Login" class="btn-secondary-custom">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại đăng nhập
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </main>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // --- 1. Logic cho Show/Hide Password ---
                function setupPasswordToggle(inputId, toggleId) {
                    const input = document.getElementById(inputId);
                    const icon = document.getElementById(toggleId);

                    if (input && icon) {
                        icon.addEventListener('click', function() {
                            const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                            input.setAttribute('type', type);
                            this.classList.toggle('fa-eye');
                            this.classList.toggle('fa-eye-slash');
                        });
                    }
                }

                // Lưu ý: asp-for sẽ tạo ID trùng với tên Model property
                setupPasswordToggle('NewPassword', 'toggleNewPassword');
                setupPasswordToggle('ConfirmPassword', 'toggleConfirmPassword');

                // --- 2. Logic Kiểm tra độ mạnh mật khẩu ---
                const newPasswordInput = document.getElementById('NewPassword');
                const strengthBar = document.getElementById('strength-bar');
                const strengthText = document.getElementById('strength-text');

                newPasswordInput.addEventListener('input', function() {
                    const password = this.value;
                    let strength = 0;

                    if (password.length === 0) {
                        strengthBar.className = 'strength-bar';
                        strengthText.textContent = '';
                        return;
                    }

                    if (password.length >= 8) strength++;
                    if (/[a-z]/.test(password)) strength++;
                    if (/[A-Z]/.test(password)) strength++;
                    if (/[0-9]/.test(password)) strength++;
                    if (/[^A-Za-z0-9]/.test(password)) strength++; // Ký tự đặc biệt

                    if (strength <= 2) {
                        strengthBar.className = 'strength-bar strength-weak';
                        strengthText.className = 'strength-text text-danger';
                        strengthText.textContent = 'Mật khẩu yếu';
                    } else if (strength <= 4) {
                        strengthBar.className = 'strength-bar strength-medium';
                        strengthText.className = 'strength-text text-warning';
                        strengthText.textContent = 'Mật khẩu trung bình';
                    } else {
                        strengthBar.className = 'strength-bar strength-strong';
                        strengthText.className = 'strength-text text-success';
                        strengthText.textContent = 'Mật khẩu mạnh';
                    }
                });

                // --- 3. Logic Kiểm tra mật khẩu khớp ---
                const confirmPasswordInput = document.getElementById('ConfirmPassword');

                function checkPasswordMatch() {
                    if (confirmPasswordInput.value && newPasswordInput.value !== confirmPasswordInput.value) {
                        confirmPasswordInput.setCustomValidity('Mật khẩu xác nhận không khớp');
                    } else {
                        confirmPasswordInput.setCustomValidity('');
                    }
                }

                newPasswordInput.addEventListener('input', checkPasswordMatch);
                confirmPasswordInput.addEventListener('input', checkPasswordMatch);
            });
        </script>
    }

</body>
</html>
