@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* * * CSS tùy chỉnh cho giao diện "đẳng cấp"
         * Sử dụng lại nền tảng từ trước và đổi màu nhấn sang VÀNG (Warning)
         */

    /* Nền và font chữ cơ bản */
    body {
        background-color: #f8f9fa;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }

    /* Canh giữa form */
    .auth-container {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Thiết kế thẻ Card */
    .auth-card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
        padding: 1.5rem;
        background-color: #ffffff;
    }

    /* Tiêu đề form (Màu VÀNG) */
    .auth-title {
        font-weight: 700;
        font-size: 1.75rem;
        color: #2c3e50;
        margin-bottom: 1rem;
        text-align: center;
    }

        .auth-title .fas {
            color: #ffc107; /* Màu nhấn VÀNG */
        }

    /* Chữ phụ (mô tả) */
    .auth-subtitle {
        color: #6c757d;
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    /* Ô input */
    .form-control-custom {
        font-size: 1rem;
        padding: 1.25rem 1.5rem;
        border: 1px solid #e0e0e0;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            border-color: #ffc107; /* Viền VÀNG */
            box-shadow: 0 0 10px rgba(255,193,7,0.2); /* Đổ bóng VÀNG */
        }

    /* Cải tiến: Thêm icon con mắt (Show/Hide password) */
    .password-wrapper {
        position: relative;
    }

    .password-toggle-icon {
        position: absolute;
        top: 50%;
        right: 1.5rem;
        transform: translateY(-50%);
        color: #adb5bd;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .password-toggle-icon:hover {
            color: #343a40;
        }
    /* Điều chỉnh padding của input password để không bị icon đè lên */
    .form-control-password {
        padding-right: 4rem; /* 1.5rem (padding gốc) + 2.5rem (cho icon) */
    }


    /* Nút bấm (Màu VÀNG) */
    .btn-primary-custom {
        font-weight: 600;
        font-size: 1rem;
        padding: 0.85rem 1.5rem;
        border-radius: 0.75rem;
        background-color: #ffc107; /* Nền VÀNG */
        border-color: #ffc107;
        color: #212529; /* Chữ màu tối để dễ đọc trên nền vàng */
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255,193,7,0.3); /* Đổ bóng VÀNG */
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255,193,7,0.4);
            background-color: #e0a800;
            border-color: #d39e00;
            color: #212529;
        }

    /* Link quay lại (Màu VÀNG khi hover) */
    .auth-link {
        font-weight: 500;
        color: #5a6a7b;
        text-decoration: none;
        transition: color 0.2s ease;
    }

        .auth-link:hover {
            color: #e0a800; /* Màu VÀNG (đậm) */
        }

</style>

<div class="auth-container">
    <div class="col-md-5 col-lg-4">
        <div class="card auth-card">
            <div class="card-body p-lg-4">

                <h4 class="auth-title">
                    <i class="fas fa-lock me-2"></i>Đặt lại mật khẩu
                </h4>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.Error
                    </div>
                }

                @if (!string.IsNullOrEmpty(ViewBag.Success))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i> @ViewBag.Success
                    </div>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-primary-custom w-100" style="background-color: #007bff; border-color: #007bff; color: #fff;">
                            <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập ngay
                        </a>
                    </div>
                }
                else
                {
                    <p class="auth-subtitle">
                        Tạo mật khẩu mới cho tài khoản
                        <strong class="d-block text-dark mt-1">@ViewBag.Email</strong>
                    </p>

                    <form method="post" asp-action="ResetPasswordWithOtp" id="reset-form">
                        <input type="hidden" name="email" value="@ViewBag.Email" />

                        <div class="mb-3">
                            <label for="newPassword" class="form-label visually-hidden">Mật khẩu mới</label>
                            <div class="password-wrapper">
                                <input type="password" class="form-control form-control-custom form-control-password" id="newPassword" name="newPassword"
                                       placeholder="Mật khẩu mới" required minlength="6">
                                <i class="fas fa-eye password-toggle-icon" id="toggleNewPassword"></i>
                            </div>
                            <div class="form-text mt-2">Mật khẩu phải có ít nhất 6 ký tự.</div>
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label visually-hidden">Xác nhận mật khẩu</label>
                            <div class="password-wrapper">
                                <input type="password" class="form-control form-control-custom form-control-password" id="confirmPassword" name="confirmPassword"
                                       placeholder="Xác nhận mật khẩu" required minlength="6">
                                <i class="fas fa-eye password-toggle-icon" id="toggleConfirmPassword"></i>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="fas fa-save me-2"></i> Đặt lại mật khẩu
                            </button>
                        </div>
                    </form>
                }

                @if (string.IsNullOrEmpty(ViewBag.Success))
                {
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Auth")" class="auth-link">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại đăng nhập
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById('reset-form');

        // --- 1. Logic cho Show/Hide Password ---
        function setupPasswordToggle(inputId, toggleId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(toggleId);

            if (passwordInput && toggleIcon) {
                toggleIcon.addEventListener('click', function() {
                    // Chuyển đổi type của input
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    // Chuyển đổi icon
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });
            }
        }

        setupPasswordToggle('newPassword', 'toggleNewPassword');
        setupPasswordToggle('confirmPassword', 'toggleConfirmPassword');

        // --- 2. Logic kiểm tra mật khẩu khớp (code gốc của bạn) ---
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');

        if (confirmPassword) {
            confirmPassword.addEventListener('input', function() {
                if (newPassword.value !== this.value) {
                    this.setCustomValidity('Mật khẩu xác nhận không khớp');
                } else {
                    this.setCustomValidity('');
                }
            });
        }

        if (newPassword) {
            newPassword.addEventListener('input', function() {
                if (confirmPassword.value) {
                    // Kích hoạt lại sự kiện 'input' trên ô confirm để kiểm tra lại
                    confirmPassword.dispatchEvent(new Event('input', { bubbles: true }));
                }
            });
        }
    });
</script>