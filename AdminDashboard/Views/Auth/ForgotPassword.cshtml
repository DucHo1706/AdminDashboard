@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* * CSS tùy chỉnh cho giao diện "đẳng cấp"
     */

    /* Thiết lập nền trang và font chữ cơ bản */
    body {
        background-color: #f8f9fa; /* Màu nền xám rất nhạt */
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }

    /* Canh giữa form theo chiều dọc và chiều ngang */
    .auth-container {
        min-height: 90vh; /* Chiều cao tối thiểu bằng 90% chiều cao màn hình */
        display: flex;
        align-items: center; /* Canh giữa theo chiều dọc */
        justify-content: center; /* Canh giữa theo chiều ngang */
    }

    /* Thiết kế lại thẻ Card */
    .auth-card {
        border: none; /* Bỏ viền mặc định */
        border-radius: 1rem; /* Bo góc mềm mại, hiện đại */
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05); /* Đổ bóng lan tỏa, nhẹ nhàng */
        padding: 1.5rem; /* Tăng khoảng đệm bên trong */
        background-color: #ffffff;
    }

    /* Tiêu đề của form */
    .auth-title {
        font-weight: 700; /* In đậm */
        font-size: 1.75rem;
        color: #2c3e50; /* Màu xám đen (thay vì đen tuyền) */
        margin-bottom: 1rem;
        text-align: center;
    }
        .auth-title .fas {
            color: #007bff; /* Màu nhấn cho icon */
        }

    /* Đoạn văn mô tả */
    .auth-subtitle {
        color: #6c757d; /* Màu xám cho chữ phụ */
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Thiết kế lại ô input */
    .form-control-custom {
        font-size: 1rem;
        padding: 1.25rem 1.5rem; /* Tăng kích thước ô input */
        border: 1px solid #e0e0e0; /* Viền mờ */
        border-radius: 0.75rem; /* Bo góc đồng bộ */
        transition: all 0.3s ease; /* Hiệu ứng chuyển động mượt */
    }
        .form-control-custom:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0,123,255,0.1); /* Hiệu ứng "glow" khi focus */
        }

    /* Thiết kế lại nút bấm */
    .btn-primary-custom {
        font-weight: 600;
        font-size: 1rem;
        padding: 0.85rem 1.5rem;
        border-radius: 0.75rem;
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,123,255,0.2); /* Đổ bóng nhẹ cho nút */
    }
        .btn-primary-custom:hover {
            transform: translateY(-2px); /* Hiệu ứng nhấc lên khi hover */
            box-shadow: 0 6px 20px rgba(0,123,255,0.3);
            background-color: #0069d9;
            border-color: #0062cc;
        }

    /* Link quay lại */
    .back-link {
        font-weight: 500;
        color: #5a6a7b;
        text-decoration: none;
        transition: color 0.2s ease;
    }
        .back-link:hover {
            color: #007bff;
        }

    /* Tùy chỉnh Alert (Thông báo lỗi/thành công) */
    .alert {
        border-radius: 0.75rem;
        border: none;
        padding: 1.25rem;
    }

</style>

<div class="auth-container">
    <div class="col-md-5 col-lg-4">
        <div class="card auth-card">
            <div class="card-body">

                <h4 class="auth-title">
                    <i class="fas fa-key me-2"></i>Quên mật khẩu
                </h4>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.Error
                    </div>
                }

                @if (!string.IsNullOrEmpty(ViewBag.Success))
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i> @ViewBag.Success
                    </div>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("VerifyOtp", "Auth", new { email = ViewBag.Email })" class="btn btn-primary-custom w-100">
                            <i class="fas fa-arrow-right me-2"></i> Tiếp tục
                        </a>
                    </div>
                }
                else
                {
                    <p class="auth-subtitle">Nhập email để nhận mã OTP đặt lại mật khẩu.</p>

                    <form method="post" asp-action="ForgotPassword">
                        <div class="mb-3">
                            <label for="email" class="form-label visually-hidden">Email</label>
                            <input type="email" class="form-control form-control-custom" id="email" name="email"
                                   placeholder="Nhập email của bạn" required>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="fas fa-paper-plane me-2"></i> Gửi mã OTP
                            </button>
                        </div>
                    </form>
                }

                <div class="text-center mt-4">
                    <a href="@Url.Action("Login", "Auth")" class="back-link">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại đăng nhập
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>