<!DOCTYPE html>
<html lang="vi" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kênh Đối Tác Nhà Xe</title>
    <base href="/" />

    <link rel="shortcut icon" href="~/css/images/icon_logo.png" type="image/x-icon" />
    <link rel="icon" href="~/css/images/icon_logo.png" type="image/png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminDashboard.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        /* Giữ nguyên CSS cũ của bạn */
        html, body { height: 100%; margin: 0; font-family: "Segoe UI", sans-serif; background-color: #f8f9fa; }
        body { display: flex; flex-direction: column; min-height: 100vh; }
        .wrapper { display: flex; flex: 1; flex-direction: column; }

        /* Đổi màu Sidebar một chút để phân biệt với Admin (Ví dụ: Màu Xanh Đậm thay vì Cam) */
        /* Nếu muốn giữ màu Cam thì để nguyên background-color: orange; */
        .sidebar {
            background-color: #0d6efd; /* Đổi sang màu xanh cho chuyên nghiệp */
            color: white; /* Chữ trắng */
            width: 230px;
            min-height: 100vh;
            transition: width 0.3s ease;
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            z-index: 1030;
        }

        .sidebar.collapsed { width: 70px; }
        .sidebar .logo { text-align: center; margin-bottom: 30px; transition: all 0.3s ease; }
        .sidebar .logo img { max-height: 40px; transition: all 0.3s ease; filter: brightness(0) invert(1); /* Logo trắng */ }
        .sidebar.collapsed .logo img { max-height: 18px; }

        .sidebar .nav-link {
            color: white; /* Chữ trắng */
            font-size: 16px;
            padding: 12px 15px;
            border-radius: 8px;
            margin: 5px 10px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            white-space: nowrap;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255,255,255, 0.2); /* Hiệu ứng hover nhẹ */
            color: white;
            text-decoration: none;
            transform: translateX(3px);
        }

        .sidebar .nav-link i { font-size: 20px; }
        .sidebar.collapsed .nav-link span { display: none; }

        /* User section */
        .user-section { padding: 0 15px; transition: all 0.3s ease; margin-top: auto; margin-bottom: 20px; }
        .sidebar.collapsed .user-section .dropdown, .sidebar.collapsed .user-section select { display: none; }
        .sidebar.collapsed .user-section .user-icon { display: flex !important; justify-content: center; font-size: 22px; cursor: pointer; margin-top: 15px; }
        .user-icon { display: none; color: white; }

        /* Username Text */
        .username-text { font-weight: bold; color: white !important; text-decoration: none; }
        .username-text:hover { color: #ffcc00 !important; }

        /* Main content */
        .main-content { flex: 1 0 auto; margin-left: 230px; transition: margin-left 0.3s ease; padding: 20px; }
        .main-content.collapsed { margin-left: 70px; }

        .toggle-btn {
            position: fixed; top: 10px; left: 240px;
            background-color: #0d6efd; /* Đồng bộ màu xanh */
            border: none; color: white; font-size: 22px;
            border-radius: 5px; padding: 5px 10px;
            transition: left 0.3s ease; z-index: 1050;
        }
        .sidebar.collapsed ~ .toggle-btn { left: 80px; }

        footer { background-color: #212529 !important; color: #adb5bd; padding: 30px 0; flex-shrink: 0; font-size: 14px; border-top: none; }
        .footer-bottom { border-top: 1px solid #495057; padding-top: 20px; margin-top: 20px; padding-left: 150px; margin-left: 150px; }
    </style>
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar" class="sidebar">
            <div class="logo">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/css/images/logo_web.png" alt="Logo" />
                </a>
                <div class="text-center small mt-2 opacity-75">Kênh Đối Tác</div>
            </div>

            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link" asp-area="NhaXe" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i><span>Tổng Quan</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="NhaXe" asp-controller="Xe" asp-action="Index">
                        <i class="bi bi-truck-front-fill"></i><span>Quản Lý Xe</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="NhaXe" asp-controller="TaiXe" asp-action="Index">
                        <i class="bi bi-person-badge-fill"></i><span>Đội Ngũ Tài Xế</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="NhaXe" asp-controller="ChuyenXe" asp-action="Index">
                        <i class="bi bi-calendar-week-fill"></i><span>Lịch Trình Chuyến</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="NhaXe" asp-controller="NhanVien" asp-action="Index">
                        <i class="bi bi-calendar-week-fill"></i><span>QL Nhân Viên</span>
                    </a>
                </li>

                <hr class="mx-3 border-light opacity-25">

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i><span>Về Trang Chủ</span>
                    </a>
                </li>
            </ul>

            <div class="user-section mt-auto mb-4">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <a class="dropdown-toggle username-text" href="#" id="userDropdown" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu shadow">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Account">Hồ sơ cá nhân</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">Đăng xuất</a></li>
                        </ul>
                    </div>
                    <div class="user-icon">
                        <i class="bi bi-person-circle" id="userIconCollapsed"></i>
                    </div>
                }
            </div>
        </nav>

        <button id="toggleBtn" class="toggle-btn"><i class="bi bi-list"></i></button>

        <div id="mainContent" class="main-content">
            <main role="main">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white pt-4 pb-4 mt-auto">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 text-center text-white-50 small">
                    &copy; 2025 GoSix Partner Portal. Dành riêng cho đối tác Nhà xe.
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Script giữ nguyên
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");
        const toggleBtn = document.getElementById("toggleBtn");

        toggleBtn.addEventListener("click", function () {
            sidebar.classList.toggle("collapsed");
            mainContent.classList.toggle("collapsed");
        });

        const userIconCollapsed = document.getElementById("userIconCollapsed");
        if (userIconCollapsed) {
            userIconCollapsed.addEventListener("click", function () {
                sidebar.classList.remove("collapsed");
                mainContent.classList.remove("collapsed");
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="_framework/blazor.server.js"></script>
</body>
</html>