@{
    Layout = "~/Views/Shared/_Layout_User.cshtml";
    ViewData["Title"] = "Home_User";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: url('/css/images/background.png') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Chào mừng bạn đến với trang người dùng!</h1>
        <p>Đây là trang dành cho người dùng đã đăng nhập.</p>
        <a asp-area="" asp-controller="Auth" asp-action="Account" class="btn btn-primary">Quay về Trang Chủ</a>
    </div>
    <div class="d-flex justify-content-center align-items-center mt-4">
        <img src="~/css/images/banner.png" class="img-fluid" style="max-height: 550px; opacity: 0.8;" alt="Bus" />
    </div>

</body>

