@model AdminDashboard.Models.Xe

@{
    ViewData["Title"] = "Chi Tiết Xe";
}

<h1>Chi Tiết Xe</h1>

<div>
    <h4>Thông tin xe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.XeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.XeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BienSoXe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BienSoXe)
        </dd>
        <dt class="col-sm-2">
            Loại xe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoaiXe.TenLoaiXe)
        </dd>
        <dt class="col-sm-2">
            Số ghế
        </dt>
        <dd class="col-sm-10">
            @if (Model.DanhSachGhe != null)
            {
                <span class="badge badge-info">@Model.DanhSachGhe.Count ghế</span>
                <a asp-action="DanhSachGhe" asp-route-id="@Model.XeId" class="btn btn-sm btn-outline-info ml-2">
                    Xem chi tiết ghế
                </a>
            }
            else
            {
                <span class="text-muted">Chưa có thông tin ghế</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.XeId" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>