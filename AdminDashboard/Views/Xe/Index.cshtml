        background: linear-gradient(to right, #fff5e6, #fff);
        font-family: 'Poppins', sans-serif;
    }

    .page-container {
        padding: 30px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .page-title {
        font-size: 2em;
        font-weight: 700;
        color: #333;
    }

