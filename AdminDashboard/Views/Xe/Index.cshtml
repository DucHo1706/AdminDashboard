@* GoSix - TanHuy *@
@model IEnumerable<AdminDashboard.Models.Xe>

@{
    ViewData["Title"] = "Quản Lý Xe";
}

<div class="page-container">
    <div class="page-header">
        <h1 class="page-title"><i class="fas fa-bus"></i> @ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-add-new">
            <i class="fas fa-plus-circle"></i> Thêm Xe Mới
        </a>
    </div>

    <div class="content-panel">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success custom-alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger custom-alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table modern-table">
                <thead>
                    <tr>
                        <th>Mã Xe</th>
                        <th>Biển Số</th>
                        <th>Loại Xe</th>
                        <th>Số Ghế</th>
                        <th class="text-center">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge bg-primary-light">@item.XeId</span></td>
                            <td class="fw-bold">@item.BienSoXe</td>
                            <td>@item.LoaiXe?.TenLoaiXe</td>
                            <td>
                                @if (item.DanhSachGhe != null)
                                {
                                    <span class="badge bg-info-light">@item.DanhSachGhe.Count ghế</span>
                                    <a asp-action="DanhSachGhe" asp-route-id="@item.XeId" class="btn-view-seats">
                                        <i class="fas fa-chair"></i> Xem ghế
                                    </a>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-light">0 ghế</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.XeId" class="btn-action btn-edit" title="Sửa">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.XeId" class="btn-action btn-details" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <button type="button" class="btn-action btn-delete" title="Xóa"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@item.XeId"
                                            data-bienso="@item.BienSoXe"
                                            data-loaixe="@item.LoaiXe?.TenLoaiXe">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Xác Nhận Xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Delete" method="post">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel"><i class="fas fa-exclamation-triangle"></i> Xác Nhận Xóa Xe</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="deleteXeId" name="XeId" />
                    <p>Bạn có chắc chắn muốn xóa xe này không?</p>
                    <dl class="row mt-3 bg-light p-2 rounded">
                        <dt class="col-sm-4">Biển Số</dt>
                        <dd class="col-sm-8" id="deleteBienSo"></dd>
                        <dt class="col-sm-4">Loại Xe</dt>
                        <dd class="col-sm-8" id="deleteLoaiXe"></dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const bienso = button.getAttribute('data-bienso');
            const loaixe = button.getAttribute('data-loaixe');
            deleteModal.querySelector('#deleteXeId').value = id;
            deleteModal.querySelector('#deleteBienSo').textContent = bienso;
            deleteModal.querySelector('#deleteLoaiXe').textContent = loaixe;
        });

        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                if (bsAlert) bsAlert.close();
            });
        }, 3000);
    </script>
}

<style>
