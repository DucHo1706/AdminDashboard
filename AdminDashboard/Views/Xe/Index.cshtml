            margin-right: 10px;
            color: #ff8c00;
        }

    .btn-add-new {
        background: #ff8c00;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 25px;
        font-weight: 600;
        transition: 0.3s;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(255, 140, 0, 0.3);
    }

        .btn-add-new:hover {
            background: #ffa733;
            transform: translateY(-2px);
        }

    .content-panel {
        background: #fff;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
    }

        .modern-table thead th {
            padding: 12px;
            color: #ff8c00;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 14px;
        }

        .modern-table tbody td {
            padding: 12px;
            color: #555;
            vertical-align: middle;
        }

        .modern-table tbody tr:nth-child(even) {
            background: #fdf8f3;
        }

    .badge {
        font-size: 12px;
        padding: 5px 8px;
        font-weight: 600;
        border-radius: 6px;
    }

    .bg-primary-light {
        background-color: #ffe3b3;
        color: #7a4100;
    }

    .bg-info-light {
        background-color: #d1ecf1;
        color: #0c5460;
    }

    .bg-secondary-light {
        background-color: #e2e3e5;
        color: #383d41;
    }

    .btn-view-seats {
        background-color: #0dcaf0;
        color: #fff;
        border-radius: 6px;
        padding: 4px 10px;
        font-size: 13px;
        margin-left: 5px;
        text-decoration: none;
        transition: 0.25s;
    }

        .btn-view-seats:hover {
            background-color: #0bbce0;
        }

    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #555;
        background: #f0f0f0;
        border: none;
        transition: 0.25s;
    }

        .btn-action:hover {
            transform: scale(1.1);
            color: #fff;
        }

    .btn-edit:hover {
        background-color: #ffc107;
    }

    .btn-details:hover {
        background-color: #0dcaf0;
    }

    .btn-delete:hover {
        background-color: #dc3545;
    }

    .custom-alert {
        border-radius: 8px;
        margin-bottom: 15px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }
</style>
