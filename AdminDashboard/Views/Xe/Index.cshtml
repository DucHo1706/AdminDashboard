@model IEnumerable<AdminDashboard.Models.Xe>

@{
    ViewData["Title"] = "Danh Sách Xe";
}

<h1>Danh Sách Xe</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm Xe Mới
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Biển số xe</th>
                <th>Loại xe</th>
                <th>Số ghế</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.XeId</td>
                    <td>@item.BienSoXe</td>
                    <td>@item.LoaiXe?.TenLoaiXe</td>
                    <td>
                        @if (item.DanhSachGhe != null)
                        {
                            <span class="badge badge-info">@item.DanhSachGhe.Count ghế</span>
                            <a asp-action="DanhSachGhe" asp-route-id="@item.XeId" class="btn btn-sm btn-outline-info ml-1">
                                <i class="fas fa-chair"></i> Xem ghế
                            </a>
                        }
                        else
                        {
                            <span class="badge badge-secondary">0 ghế</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.XeId" class="btn btn-sm btn-warning" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.XeId" class="btn btn-sm btn-info" title="Chi tiết">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.XeId" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Tự động ẩn alert sau 5 giây
        $(document).ready(function () {
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}