@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated != true)
                {
                    <RedirectToLogin />
                }
                else
                {
                    <p role="alert">Bạn không có quyền truy cập tài nguyên này.</p>
                }
            </NotAuthorized>
            <Authorizing>
                <p>Đang kiểm tra quyền...</p>
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <PageTitle>Không tìm thấy</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Xin lỗi, không tìm thấy trang này.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private class RedirectToLogin : ComponentBase
    {
        [Inject] private NavigationManager? Navigation { get; set; }
        
        protected override void OnInitialized()
        {
            Navigation?.NavigateTo("/Auth/Login", forceLoad: true);
        }
    }
}
