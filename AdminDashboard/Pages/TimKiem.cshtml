@page
@model AdminDashboard.Pages.TimKiemModel
@{
    ViewData["Title"] = "Tìm kiếm chuyến xe";
    Layout = "_Layout_User";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container my-5">
        <!-- Kết quả tìm kiếm -->
    @if (!string.IsNullOrEmpty(Model.DiemDiId) && !string.IsNullOrEmpty(Model.DiemDenId) && Model.NgayDi.HasValue)
    {
        <div class="mt-5">
            @if (Model.TenTramDi != null && Model.TenTramDen != null)
            {
                <h3 class="text-center mb-4" style="color: white; font-weight: bold; text-shadow: 1px 1px 2px black;">
                    @Model.TenTramDi <i class="bi bi-arrow-right"></i> @Model.TenTramDen
                </h3>
                <p class="text-center mb-4" style="color: white; text-shadow: 1px 1px 2px black;">
                    Ngày đi: <strong>@Model.NgayDi.Value.ToString("dd/MM/yyyy")</strong>
                </p>
            }

            @if (Model.KetQuaTimKiem != null && Model.KetQuaTimKiem.Any())
            {
                <div class="row g-4 mt-2">
                    @foreach (var cx in Model.KetQuaTimKiem)
                    {
                        <div class="col-12">
                            <div class="trip-result-card">
                                <div class="card-body-trip">
                                    <div class="trip-route-section">
                                        <div class="route-info">
                                            <div class="route-start">
                                                <div class="time-badge">@cx.GioDi.ToString(@"hh\:mm")</div>
                                                <div class="station-name">@cx.LoTrinh?.TramDiNavigation?.TenTram</div>
                                            </div>
                                            <div class="route-arrow">
                                                <div class="route-duration">@((cx.GioDenDuKien - cx.GioDi).ToString(@"hh\:mm"))</div>
                                                <div class="arrow-line">
                                                    <i class="bi bi-arrow-right"></i>
                                                </div>
                                                <div class="bus-type">@cx.Xe?.LoaiXe?.TenLoaiXe</div>
                                            </div>
                                            <div class="route-end">
                                                <div class="time-badge">@cx.GioDenDuKien.ToString(@"hh\:mm")</div>
                                                <div class="station-name">@cx.LoTrinh?.TramToiNavigation?.TenTram</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="trip-details-section">
                                        <div class="detail-item">
                                            <i class="bi bi-calendar3"></i>
                                            <span>@cx.NgayDi.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="detail-item">
                                            <i class="bi bi-car-front"></i>
                                            <span>@cx.Xe?.BienSoXe</span>
                                        </div>
                                        <div class="price-section">
                                            <span class="price-label">Giá vé:</span>
                                            <span class="price-value">@String.Format("{0:N0} đ", cx.LoTrinh?.GiaVeCoDinh)</span>
                                        </div>
                                    </div>
                                    <div class="trip-action-section">
                                        <a asp-action="ChonGhe"
                                           asp-controller="Booking"
                                           asp-route-chuyenId="@cx.ChuyenId"
                                           class="btn-select-trip">
                                            <i class="bi bi-ticket-perforated me-2"></i>
                                            Chọn chuyến
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center mt-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Không tìm thấy chuyến xe nào phù hợp với tiêu chí tìm kiếm.
                </div>
            }
        </div>
    }
</div>

<style>
    /* Style cho Trip Result Cards */
    .trip-result-card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        overflow: hidden;
        margin-bottom: 20px;
    }

    .trip-result-card:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }

    .card-body-trip {
        padding: 25px;
    }

    /* Section Route */
    .trip-route-section {
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    .route-info {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .route-start,
    .route-end {
        flex: 1;
        text-align: center;
    }

    .time-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 10px;
        display: inline-block;
        box-shadow: 0 4px 10px rgba(102, 126, 234, 0.3);
    }

    .station-name {
        font-size: 16px;
        font-weight: 600;
        color: #333;
        margin-top: 8px;
    }

    .route-arrow {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        flex: 1;
        max-width: 200px;
    }

    .route-duration {
        font-size: 14px;
        color: #666;
        font-weight: 500;
    }

    .arrow-line {
        font-size: 24px;
        color: #FF6600;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .arrow-line i {
        background: #fff5f0;
        padding: 8px 15px;
        border-radius: 20px;
    }

    .bus-type {
        font-size: 12px;
        color: #888;
        background: #f8f9fa;
        padding: 5px 12px;
        border-radius: 15px;
    }

    /* Section Details */
    .trip-details-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #666;
        font-size: 14px;
    }

    .detail-item i {
        color: #FF6600;
        font-size: 18px;
    }

    .price-section {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-left: auto;
    }

    .price-label {
        font-size: 14px;
        color: #666;
    }

    .price-value {
        font-size: 24px;
        font-weight: 700;
        color: #FF6600;
    }

    /* Section Action */
    .trip-action-section {
        text-align: right;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
    }

    .btn-select-trip {
        background: linear-gradient(135deg, #FF6600 0%, #FF9933 100%);
        color: white;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 102, 0, 0.3);
    }

    .btn-select-trip:hover {
        background: linear-gradient(135deg, #FF9933 0%, #FF6600 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 102, 0, 0.4);
        color: white;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .route-info {
            flex-direction: column;
            gap: 15px;
        }

        .route-arrow {
            max-width: 100%;
            flex-direction: row;
            width: 100%;
            justify-content: center;
        }

        .arrow-line {
            transform: rotate(90deg);
        }

        .trip-details-section {
            flex-direction: column;
            align-items: flex-start;
        }

        .price-section {
            margin-left: 0;
            width: 100%;
            justify-content: space-between;
        }

        .trip-action-section {
            text-align: center;
        }

        .btn-select-trip {
            width: 100%;
            justify-content: center;
        }
    }
</style>
