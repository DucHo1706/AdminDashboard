@model AdminDashboard.ViewModels.TaiXeRegistrationViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng ký tài xế";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            height: 100vh;
            font-family: 'Segoe UI', Roboto, sans-serif;
        }

        h2 {
            text-align: center;
            font-size: 38px;
            font-weight: 700;
            color: #00CC00;
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .form {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 85vh;
        }

        .form-container {
            background: rgba(255, 255, 255);
            padding: 50px 60px;
            border-radius: 16px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.2);
            width: 95%;
            max-width: 700px;
        }

        .form-group-custom {
            margin-bottom: 22px;
        }

        .control-label {
            font-weight: 600;
            color: #4a5568;
            margin-bottom: 6px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .control-label i {
                color: #00CC00;
            }

        .form-control {
            height: 45px;
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 0 14px;
            font-size: 15px;
            transition: 0.2s ease;
        }

            .form-control:focus {
                border-color: #00CC00;
                box-shadow: 0 0 0 3px rgba(255, 152, 0, 0.2);
                outline: none;
            }

        button {
            position: relative;
            padding: 12px 24px;
            border-radius: 8px;
            border: 1px solid #33CC00;
            font-size: 15px;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
            background: transparent;
            color: black;
            overflow: hidden;
            transition: all 0.25s ease;
        }

            button:hover {
                background: #33CC00;
                box-shadow: 0 0 20px 5px #33CC66;
                color: white;
            }

        .alert {
            border-radius: 10px;
        }

        a.text-decoration-none {
            color: #00CC00;
            transition: transform 0.2s ease;
        }

            a.text-decoration-none:hover {
                transform: scale(1.2);
            }

        hr {
            border: none;
            height: 1px;
            background-color: #ccc;
            margin-bottom: 20px;
        }

        .text-center {
            text-align: center;
        }

        .logo-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: -10px;
            margin-bottom: 10px;
        }

            .logo-wrapper img {
                width: 130px;
                height: 38px;
            }

        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>

<body>
    <h2>Đăng ký tài xế mới</h2>
    <hr />

    <div class="form">
        <div class="form-container">
            <!-- Hiển thị thông báo -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@TempData["SuccessMessage"]</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <div class="header-bar mb-3">
                <a asp-action="Index" class="text-decoration-none">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                         class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                        <path fill-rule="evenodd"
                              d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                    </svg>
                </a>
                <!-- để trống bên phải cho cân đối -->
                <div style="width:18px;"></div>
            </div>

            <div class="logo-wrapper">
                <img src="~/css/Images/logo_web.png" alt="Logo" />
            </div>

            <hr class="bg-black" />

            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="HoTen" class="control-label">
                                <i class="fas fa-user"></i> Họ tên
                            </label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên tài xế" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="Email" class="control-label">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="MatKhau" class="control-label">
                                <i class="fas fa-lock"></i> Mật khẩu
                            </label>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="SoDienThoai" class="control-label">
                                <i class="fas fa-phone"></i> Số điện thoại
                            </label>
                            <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="BangLaiXe" class="control-label">
                                <i class="fas fa-id-card"></i> Bằng lái xe
                            </label>
                            <input asp-for="BangLaiXe" class="form-control" placeholder="VD: B2, C, D..." />
                            <span asp-validation-for="BangLaiXe" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label asp-for="NgaySinh" class="control-label">
                                <i class="fas fa-calendar"></i> Ngày sinh
                            </label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group-custom">
                    <label asp-for="NgayVaoLam" class="control-label">
                        <i class="fas fa-briefcase"></i> Ngày vào làm
                    </label>
                    <input asp-for="NgayVaoLam" type="date" class="form-control" />
                    <span asp-validation-for="NgayVaoLam" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
