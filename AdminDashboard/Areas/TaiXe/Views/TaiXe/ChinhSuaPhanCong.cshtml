@model AdminDashboard.Models.ChuyenXe

@{
    ViewData["Title"] = "Chỉnh sửa phân công tài xế";
}

<style>
    body {
        background: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 15px;
    }

    .page-header {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(90deg, #FF9900, #e68a00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 35px;
    }

    .card-modern {
        background: linear-gradient(145deg, #ffffff, #f9fafb);
        border-radius: 20px;
        padding: 30px 25px;
        box-shadow: 0 12px 25px rgba(0,0,0,0.08);
        border-left: 8px solid #FF9900;
        transition: all 0.3s ease;
        margin-bottom: 30px;
    }

        .card-modern:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 35px rgba(0,0,0,0.15);
        }

        .card-modern h5 {
            font-size: 1.4rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 18px;
            border-bottom: 2px solid #e2e8f0;
            padding-bottom: 10px;
        }

        .card-modern p {
            font-size: 1.05rem;
            color: #475569;
            margin: 8px 0;
        }

    label {
        font-weight: 600;
        color: #FF9900;
        margin-bottom: 8px;
        display: block;
    }

    select.form-control {
        width: 100%;
        padding: 12px 16px;
        border-radius: 14px;
        border: 1px solid #cbd5e1;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        select.form-control:focus {
            border-color: #FF9900;
            box-shadow: 0 0 0 5px rgba(255,153,0,0.15);
            outline: none;
        }

    .btn-custom {
        border-radius: 14px;
        padding: 12px 28px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #FF9900, #e68a00);
        color: #1e1e2f;
        border: none;
        box-shadow: 0 6px 15px rgba(255,153,0,0.35);
    }

        .btn-primary-custom:hover {
            background: linear-gradient(135deg, #e68a00, #cc7a00);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(230,138,0,0.4);
        }

    .btn-group-custom {
        display: flex;
        gap: 15px;
        margin-top: 25px;
        justify-content: flex-end;
    }

    .icon {
        font-size: 1.1rem;
    }

    .section-line {
        height: 4px;
        width: 80px;
        background: linear-gradient(90deg, #FF9900, #e68a00);
        border-radius: 2px;
        margin-bottom: 20px;
    }

    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 15px;
    }

    a.text-decoration-none {
        color: #FF6600;
        transition: transform 0.2s ease;
    }

        a.text-decoration-none:hover {
            transform: scale(1.2);
        }
</style>

<div class="page-container">
    <h2 class="page-header">@ViewData["Title"]</h2>
    <div class="header-bar mb-3">
        <a asp-action="DanhSachPhanCong" class="text-decoration-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                 class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                <path fill-rule="evenodd"
                      d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
            </svg>
        </a>
        <div style="width:18px;"></div>
    </div>
    <form asp-action="ChinhSuaPhanCong" method="post">
        <input type="hidden" name="chuyenId" value="@Model.ChuyenId" />

        <div class="card-modern">
            <div class="section-line"></div>
            <h5><i class="bi bi-truck"></i> Thông tin chuyến xe</h5>
            <p><strong>Mã chuyến:</strong> @Model.ChuyenId</p>
            <p><strong>Lộ trình:</strong> @Model.LoTrinh?.TramDiNavigation?.TenTram → @Model.LoTrinh?.TramToiNavigation?.TenTram</p>
            <p><strong>Ngày đi:</strong> @Model.NgayDi.ToString("dd/MM/yyyy")</p>
            <p><strong>Giờ đi:</strong> @Model.GioDi.ToString(@"hh\:mm")</p>
        </div>

        <div class="mb-3">
            <label for="taiXeId"><i class="bi bi-person-badge"></i> Chọn tài xế mới</label>
            <select id="taiXeId" name="taiXeId" class="form-control" asp-items="ViewBag.TaiXeList">
                <option value="">-- Chọn tài xế --</option>
            </select>
        </div>

        <div class="btn-group-custom">
            <button type="submit" class="btn btn-custom btn-primary-custom">
                <i class="bi bi-save icon"></i> Lưu thay đổi
            </button>
        </div>
    </form>
</div>
