@model IEnumerable<AdminDashboard.Models.ChuyenXe>
@using AdminDashboard.Models.TrangThai

@{
    Layout = "_Layout";
    ViewData["Title"] = "Lịch Phân Công";

    // Lấy thông tin lọc từ Controller
    var startDate = (DateTime)ViewBag.StartDate;
    var endDate = (DateTime)ViewBag.EndDate;
    var prevDate = (DateTime)ViewBag.PreviousWeekDate;
    var nextDate = (DateTime)ViewBag.NextWeekDate;
    var isCurrentWeek = (bool)ViewBag.IsCurrentWeek;
}

<style>
    h1 {
        text-align: center;
        font-size: 2.5em;
        font-weight: 700;
        color: #0033FF;
        text-transform: uppercase;
        margin: 20px;
    }
    .schedule-header {
        background: linear-gradient(135deg, #ffffffdd, #f8f9fad9);
        backdrop-filter: blur(8px);
        border-radius: 14px;
        padding: 18px 22px;
        border: 1px solid #eee;
    }

    .day-group {
        margin-bottom: 2.8rem;
    }

    .day-header {
        font-size: 1.55rem;
        font-weight: 700;
        color: #ff7a00;
        padding-bottom: 6px;
        border-bottom: 2px solid #f3f3f3;
        margin-bottom: 1.2rem;
        letter-spacing: 0.3px;
    }

    .assignment-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 14px;
        padding: 1.35rem 1.4rem;
        margin-bottom: 0.9rem;
        border-left-width: 6px !important;
        border: 1px solid #e5e5e5;
        transition: 0.2s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.06);
    }

        .assignment-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

    .assignment-time {
        font-size: 1.15rem;
        font-weight: 700;
        width: 140px;
        color: #222;
    }

    .assignment-driver {
        font-size: 1.05rem;
        font-weight: 600;
        color: #005be0;
    }

    .assignment-route {
        font-size: 0.95rem;
        color: #555;
        margin-top: 10px;
        padding-left: 5px;
    }

        .assignment-route i {
            font-size: 1.1rem;
            margin-right: 4px;
        }

    .badge-status {
        font-size: 0.82rem;
        font-weight: 600;
        padding: 0.45em 0.9em;
        border-radius: 50px;
    }

    .border-status-ChoKhoiHanh {
        border-left-color: #ffce3a;
    }

    .border-status-DangDiChuyen {
        border-left-color: #3b82f6;
    }

    .border-status-DaHoanThanh {
        border-left-color: #22c55e;
    }

    .border-status-DaHuy {
        border-left-color: #ef4444;
    }

    .border-status-default {
        border-left-color: #6c757d;
    }

    .btn-week {
        border-radius: 20px;
        padding: 6px 15px;
    }

        .btn-week i {
            margin: 0 3px;
        }

    .assignment-card .btn {
        border-radius: 10px;
    }

    .empty-state {
        color: #777;
        font-size: 1.2rem;
    }

    .empty-state-icon {
        font-size: 3.2rem;
        opacity: 0.25;
    }

</style>


<div class="container-fluid">
    <div class="text-center mb-4">
        <h1 class="page-title">@ViewData["Title"]</h1>
    </div>
    <div class="d-flex justify-content-between align-items-center header-actions mb-4">
        <a asp-action="Index" class="text-decoration-none text-primary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>

        <a asp-action="PhanCongLich" class="btn btn-outline-primary btn-modern">
            <i class="bi bi-plus-circle"></i> Phân Công Mới
        </a>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header schedule-header d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                Lịch phân công (@startDate.ToString("dd/MM") - @endDate.ToString("dd/MM/yyyy"))
            </h6>

            <div>
                <a asp-action="DanhSachPhanCong" asp-route-startDate="@prevDate.ToString("yyyy-MM-dd")"
                   class="btn btn-sm btn-outline-secondary btn-week">
                    <i class="bi bi-chevron-left"></i> Tuần trước
                </a>

                @if (!isCurrentWeek)
                {
                    <a asp-action="DanhSachPhanCong" asp-route-startDate="@null"
                       class="btn btn-sm btn-outline-primary btn-week">
                        <i class="bi bi-calendar-check"></i> Tuần này
                    </a>
                }

                <a asp-action="DanhSachPhanCong" asp-route-startDate="@nextDate.ToString("yyyy-MM-dd")"
                   class="btn btn-sm btn-outline-secondary btn-week">
                    Tuần sau <i class="bi bi-chevron-right"></i>
                </a>

            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center" style="padding: 2rem 0;">
                    <p class="text-muted" style="font-size: 1.2rem;">
                        <i class="bi bi-calendar2-x empty-state-icon"></i>
                        Không có chuyến xe nào được phân công trong tuần này.
                    </p>
                </div>
            }
            else
            {
                var assignmentsByDay = Model.GroupBy(c => c.NgayDi.Date)
                .OrderBy(g => g.Key);

                foreach (var dayGroup in assignmentsByDay)
                {
                    <div class="day-group">
                        <h5 class="day-header">
                            @dayGroup.Key.ToString("dddd, dd/MM/yyyy")
                        </h5>

                        <div class="list-group">
                            @foreach (var chuyen in dayGroup.OrderBy(c => c.GioDi))
                            {
                                string borderColor = "border-status-default";
                                string badgeColor = "badge bg-secondary";
                                switch (chuyen.TrangThai)
                                {
                                    case TrangThaiChuyenXe.ChoKhoiHanh:
                                        borderColor = "border-status-ChoKhoiHanh";
                                        badgeColor = "badge bg-warning text-dark";
                                        break;
                                    case TrangThaiChuyenXe.DangDiChuyen:
                                        borderColor = "border-status-DangDiChuyen";
                                        badgeColor = "badge bg-primary";
                                        break;
                                    case TrangThaiChuyenXe.DaHoanThanh:
                                        borderColor = "border-status-DaHoanThanh";
                                        badgeColor = "badge bg-success";
                                        break;
                                    case TrangThaiChuyenXe.DaHuy:
                                        borderColor = "border-status-DaHuy";
                                        badgeColor = "badge bg-danger";
                                        break;
                                }

                                <div class="assignment-card @borderColor">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <span class="assignment-time">
                                                <i class="bi bi-clock-fill text-muted"></i> @chuyen.GioDi.ToString(@"hh\:mm")
                                            </span>
                                            <span class="assignment-driver">
                                                <i class="bi bi-person-circle"></i> @chuyen.TaiXe?.HoTen
                                            </span>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge-status @badgeColor">@chuyen.TrangThai</span>

                                            <a asp-action="ChinhSuaPhanCong" asp-route-chuyenId="@chuyen.ChuyenId" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>

                                            @if (chuyen.TrangThai != TrangThaiChuyenXe.DangDiChuyen &&
                                           chuyen.TrangThai != TrangThaiChuyenXe.DaHoanThanh)
                                            {
                                                <form asp-action="HuyPhanCong" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="chuyenId" value="@chuyen.ChuyenId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Hủy phân công"
                                                            onclick="return confirm('Bạn có chắc muốn hủy phân công này?')">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                    <div class="assignment-route mt-2">
                                        <i class="bi bi-sign-turn-right-fill text-muted"></i>
                                        <strong>Lộ trình:</strong> @chuyen.LoTrinh?.TramDiNavigation?.TenTram → @chuyen.LoTrinh?.TramToiNavigation?.TenTram
                                        (@chuyen.Xe?.BienSoXe)
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var alertList = document.querySelectorAll('.alert');
            setTimeout(function () {
                alertList.forEach(function (alert) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                    bsAlert.close();
                });
            }, 3000);
        });
    </script>
}
