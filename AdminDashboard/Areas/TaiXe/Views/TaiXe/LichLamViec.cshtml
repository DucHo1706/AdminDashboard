@using AdminDashboard.Models.TrangThai
@model IEnumerable<AdminDashboard.Models.ChuyenXe>

@{
    ViewData["Title"] = "Lịch Làm Việc Của Tôi";
    Layout = "~/Views/Shared/_LayoutTaiXe.cshtml";
}

<style>
    body {
        background: #f4f6f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 15px;
    }

    .page-header {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 40px;
    }

    .filter-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 20px 25px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        margin-bottom: 30px;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        align-items: flex-end;
    }

        .filter-card label {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 5px;
            display: block;
        }

        .filter-card input[type="date"] {
            width: 180px;
            padding: 8px 12px;
            border-radius: 12px;
            border: 1px solid #cbd5e1;
            font-size: 0.95rem;
        }

        .filter-card .btn {
            border-radius: 12px;
            padding: 8px 18px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

    .btn-primary-custom {
        background-color: #3b82f6;
        color: #fff;
        border: none;
    }

        .btn-primary-custom:hover {
            background-color: #2563eb;
        }

    .btn-secondary-custom {
        background-color: #e5e7eb;
        color: #1e293b;
    }

        .btn-secondary-custom:hover {
            background-color: #d1d5db;
        }

    .action-btns {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }

    .schedule-grid {
        width: 100%;
        border-collapse: collapse;
        table-layout: auto; 
    }

        .schedule-grid th, .schedule-grid td {
            border: 1px solid RGB(31, 37, 75);
            padding: 8px;
            text-align: center;
            vertical-align: top;
            height: 80px; 
        }

        /* Tiêu đề cột (Thứ, Ngày) */
        .schedule-grid thead th {
            background-color: RGB(19, 81, 122);
            font-weight: 700;
            font-size: 0.9rem;
            color:white;
        }

        /* Tiêu đề hàng (Giờ) */
        .schedule-grid tbody th {
            background-color: RGB(213, 221, 236);
            font-weight: 400;
            width: 80px;
            font-size: 0.9rem;
        }

        .schedule-grid tbody td {
            text-align: left;
            padding: 0;
        }

    /* Thẻ chuyến xe */
    .trip-cell {
        background-color: #e6f0ff;
        border-left: 4px solid #3b82f6;
        padding: 8px;
        height: 100%;
        overflow: auto; /* Thêm cuộn nếu ô quá nhỏ */
        font-size: 0.85rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }

    .trip-cell-dang-di-chuyen {
        background-color: #d1fae5;
        border-left-color: #10b981;
    }

    .trip-cell-da-hoan-thanh {
        background-color: #f3f4f6;
        border-left-color: #6b7280;
        opacity: 0.8;
    }

    .trip-cell h6 {
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 4px;
        color: #1e293b;
    }

    .trip-cell p {
        margin: 2px 0;
        line-height: 1.4;
    }

    /* === CSS MODAL VÀ ALERT === */
    .modal-content {
        border-radius: 18px;
        overflow: hidden;
    }

    .alert-success {
        border-radius: 12px;
        background-color: #d1fae5;
        color: #065f46;
        border: 1px solid #10b981;
    }
</style>

<div class="page-container">
    <h2 class="page-header">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="filter-card">
        <form method="get" asp-action="LichLamViec" class="d-flex flex-wrap align-items-end gap-3">
            <div>
                <label for="tuNgay">Từ ngày:</label>
                <input type="date" id="tuNgay" name="tuNgay" value="@ViewBag.TuNgay">
            </div>
            <div>
                <label for="denNgay">Đến ngày:</label>
                <input type="date" id="denNgay" name="denNgay" value="@ViewBag.DenNgay">
            </div>
            <div>
                <button type="submit" class="btn btn-primary-custom">Lọc</button>
                <a href="@Url.Action("LichLamViec")" class="btn btn-secondary-custom">Hiện tất cả</a>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">Bạn chưa có chuyến xe nào được phân công trong khoảng thời gian này.</p>
    }
    else
    {
        // --- BƯỚC 1: CHUẨN BỊ DỮ LIỆU CHO LỊCH ---
        var trips = Model.OrderBy(c => c.NgayDi).ThenBy(c => c.GioDi).ToList();

        // Lấy ngày bắt đầu từ ViewBag để xác định tuần
        DateTime.TryParse(ViewBag.TuNgay as string, out var startDate);
        if (startDate == DateTime.MinValue) startDate = DateTime.Today; // Nếu null, dùng ngày hôm nay

        // Tìm ngày Thứ 2 của tuần chứa startDate
        int diff = (startDate.DayOfWeek == DayOfWeek.Sunday) ? 6 : (int)startDate.DayOfWeek - (int)DayOfWeek.Monday;
        DateTime monday = startDate.AddDays(-diff).Date;

        // TẠO DANH SÁCH 7 NGÀY TRONG TUẦN (Thứ 2 -> Chủ Nhật)
        var daysToShow = new List<DateTime>();
        for (int i = 0; i < 7; i++)
        {
            daysToShow.Add(monday.AddDays(i));
        }

        // Tìm giờ bắt đầu/kết thúc dựa trên các chuyến xe
        var minHour = (int)trips.Min(c => c.GioDi.TotalHours);
        var maxHour = (int)Math.Ceiling(trips.Max(c => c.GioDenDuKien.TotalHours));
        if (maxHour <= minHour) maxHour = minHour + 1; // Đảm bảo không lỗi

        var hoursToShow = Enumerable.Range(minHour, maxHour - minHour).ToList();
        var occupiedCells = new HashSet<(DateTime Date, int Hour)>();

        // --- BƯỚC 2: VẼ BẢNG LỊCH BIỂU ---
        <div class="table-responsive">
            <table class="schedule-grid">

                <thead>
                    <tr>
                        <th>Giờ</th>
                        @foreach (var day in daysToShow)
                        {
                            <th>
                                @day.ToString("dddd")<br />
                                @day.ToString("dd/MM")
                            </th>
                        }
                    </tr>
                </thead>

                <tbody>
                    @foreach (var hour in hoursToShow)
                    {
                        <tr>
                            <th>@TimeSpan.FromHours(hour).ToString(@"hh\:mm")</th>

                            @foreach (var day in daysToShow)
                            {
                                // Nếu ô đã bị chiếm bởi rowspan, bỏ qua
                                if (occupiedCells.Contains((day, hour)))
                                {
                                    continue;
                                }

                                // Tìm chuyến xe bắt đầu trong giờ và ngày này
                                var trip = trips.FirstOrDefault(c =>
                                c.NgayDi.Date == day &&
                                (int)c.GioDi.TotalHours == hour);

                                if (trip != null)
                                {
                                    // Tính số ô (hàng) mà chuyến xe này chiếm
                                    var startHour = (int)trip.GioDi.TotalHours;
                                    var endHour = (int)Math.Ceiling(trip.GioDenDuKien.TotalHours);
                                    var rowSpan = Math.Max(1, endHour - startHour);

                                    // Đánh dấu các ô bên dưới là "bị chiếm"
                                    for (int i = 1; i < rowSpan; i++)
                                    {
                                        occupiedCells.Add((day, hour + i));
                                    }

                                    // Thêm class màu theo trạng thái
                                    string cellClass = "";
                                    if (trip.TrangThai == TrangThaiChuyenXe.DangDiChuyen)
                                    {
                                        cellClass = "trip-cell-dang-di-chuyen";
                                    }
                                    else if (trip.TrangThai == TrangThaiChuyenXe.DaHoanThanh)
                                    {
                                        cellClass = "trip-cell-da-hoan-thanh";
                                    }

                                    <td class="align-top" rowspan="@rowSpan">
                                        <div class="trip-cell @cellClass">
                                            <h6>@trip.GioDi.ToString(@"hh\:mm") - @trip.GioDenDuKien.ToString(@"hh\:mm")</h6>
                                            <p>
                                                <strong>Lộ trình:</strong>
                                                @(trip.LoTrinh?.TramDiNavigation?.TenTram ?? "...") →
                                                @(trip.LoTrinh?.TramToiNavigation?.TenTram ?? "...")
                                            </p>
                                            <p><strong>Trạng thái:</strong> @trip.TrangThai</p>

                                            <div class="action-btns">
                                                @if (trip.TrangThai == TrangThaiChuyenXe.ChoKhoiHanh)
                                                {
                                                    <form asp-controller="TaiXe" asp-action="CheckInXuatBen" asp-route-id="@trip.ChuyenId" method="post">
                                                        <button type="submit" class="btn btn-primary-custom btn-sm">Xuất Bến</button>
                                                    </form>
                                                }
                                                else if (trip.TrangThai == TrangThaiChuyenXe.DangDiChuyen)
                                                {
                                                    <form asp-controller="TaiXe" asp-action="CheckInDenNoi" asp-route-id="@trip.ChuyenId" method="post">
                                                        <button type="submit" class="btn btn-primary-custom btn-sm">Đã Đến Nơi</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-secondary-custom btn-sm" onclick="showChuyenDetail('@trip.ChuyenId')">Chi tiết</button>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td></td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div class="modal fade" id="chuyenDetailModal" tabindex="-1" role="dialog" aria-labelledby="chuyenDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="chuyenDetailModalLabel">Chi tiết chuyến xe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="chuyenDetailContent"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary-custom" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script cho modal chi tiết
        function showChuyenDetail(chuyenId) {
            $.ajax({
                url: '@Url.Action("GetChuyenDetail", "TaiXe")',
                type: 'GET',
                data: { chuyenId: chuyenId },
                success: function (data) {
                    $('#chuyenDetailContent').html(data);
                    $('#chuyenDetailModal').modal('show');
                },
                error: function () {
                    alert('Có lỗi xảy ra khi tải thông tin chi tiết.');
                }
            });
        }
    </script>
}