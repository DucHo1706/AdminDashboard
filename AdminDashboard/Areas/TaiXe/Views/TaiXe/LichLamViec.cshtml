@using AdminDashboard.Models.TrangThai
@model IEnumerable<AdminDashboard.Models.ChuyenXe>

@{
    ViewData["Title"] = "Lịch Làm Việc Của Tôi";
    Layout = "~/Views/Shared/_LayoutTaiXe.cshtml";
}

<style>
    body {
        background: #f4f6f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 15px;
    }

    .page-header {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 40px;
    }

    .filter-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 20px 25px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        margin-bottom: 30px;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        align-items: flex-end;
    }

    .filter-card label {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 5px;
        display: block;
    }

    .filter-card input[type="date"] {
        width: 180px;
        padding: 8px 12px;
        border-radius: 12px;
        border: 1px solid #cbd5e1;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .filter-card input[type="date"]:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 4px rgba(59,130,246,0.15);
        outline: none;
    }

    .filter-card .btn {
        border-radius: 12px;
        padding: 8px 18px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary-custom {
        background-color: #3b82f6;
        color: #fff;
        border: none;
    }

    .btn-primary-custom:hover {
        background-color: #2563eb;
    }

    .btn-secondary-custom {
        background-color: #e5e7eb;
        color: #1e293b;
    }

    .btn-secondary-custom:hover {
        background-color: #d1d5db;
    }

    .chuyen-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        margin-bottom: 20px;
        transition: all 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .chuyen-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.12);
    }

    .chuyen-info {
        flex: 1;
        min-width: 250px;
    }

    .chuyen-info h5 {
        font-size: 1.2rem;
        margin-bottom: 10px;
        color: #1e293b;
    }

    .chuyen-info p {
        font-size: 0.95rem;
        color: #475569;
        margin: 3px 0;
    }

    .badge {
        font-size: 0.85rem;
        font-weight: 500;
        padding: 5px 10px;
        border-radius: 12px;
        display: inline-block;
    }

    .badge-secondary { background-color: #9ca3af; color: #fff; }
    .badge-info { background-color: #3b82f6; color: #fff; }
    .badge-warning { background-color: #facc15; color: #1e293b; }
    .badge-primary { background-color: #2563eb; color: #fff; }
    .badge-success { background-color: #22c55e; color: #fff; }
    .badge-danger { background-color: #ef4444; color: #fff; }

    .action-btns {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }

    .modal-content {
        border-radius: 18px;
        overflow: hidden;
    }

    .alert-success {
        border-radius: 12px;
        background-color: #d1fae5;
        color: #065f46;
        border: 1px solid #10b981;
    }

    @@media (max-width: 768px) {
        .filter-card input[type="date"] { width: 100%; }
        .chuyen-card { flex-direction: column; align-items: flex-start; }
        .action-btns { justify-content: flex-start; width: 100%; }
    }
</style>

<div class="page-container">
    <h2 class="page-header">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="filter-card">
        <div>
            <label for="tuNgay">Từ ngày:</label>
            <input type="date" id="tuNgay" name="tuNgay" value="@ViewBag.TuNgay">
        </div>
        <div>
            <label for="denNgay">Đến ngày:</label>
            <input type="date" id="denNgay" name="denNgay" value="@ViewBag.DenNgay">
        </div>
        <div>
            <button type="submit" class="btn btn-primary-custom">Lọc</button>
            <a href="@Url.Action("LichLamViec")" class="btn btn-secondary-custom">Hiện tất cả</a>
        </div>
    </div>

    <!-- Danh sách chuyến xe -->
    @if (!Model.Any())
    {
        <p class="text-center text-gray-400">Bạn chưa có chuyến xe nào được phân công.</p>
    }
    else
    {
        @foreach (var chuyen in Model)
        {
            <div class="chuyen-card">
                <div class="chuyen-info">
                    <h5>Mã Chuyến: @chuyen.ChuyenId</h5>
                    <p><strong>Lộ trình:</strong> 
                        @(chuyen.LoTrinh?.TramDiNavigation?.TenTram ?? "Chưa có") 
                        → @(chuyen.LoTrinh?.TramToiNavigation?.TenTram ?? "Chưa có")
                    </p>
                    <p><strong>Ngày đi:</strong> @chuyen.NgayDi.ToString("dd/MM/yyyy")</p>
                    <p><strong>Giờ đi:</strong> @chuyen.GioDi.ToString(@"hh\:mm")</p>
                    <p><strong>Giờ đến dự kiến:</strong> @chuyen.GioDenDuKien.ToString(@"hh\:mm")</p>
                    <p><strong>Xe:</strong> @(chuyen.Xe != null ? chuyen.Xe.BienSoXe : "Chưa phân xe")</p>
                    <p><strong>Trạng thái:</strong> 
                        <span class="badge
                            @(chuyen.TrangThai == TrangThaiChuyenXe.DaLenLich ? "badge-secondary" :
                              chuyen.TrangThai == TrangThaiChuyenXe.DangMoBanVe ? "badge-info" :
                              chuyen.TrangThai == TrangThaiChuyenXe.ChoKhoiHanh ? "badge-warning" :
                              chuyen.TrangThai == TrangThaiChuyenXe.DangDiChuyen ? "badge-primary" :
                              chuyen.TrangThai == TrangThaiChuyenXe.DaHoanThanh ? "badge-success" : "badge-danger")">
                            @chuyen.TrangThai
                        </span>
                    </p>
                </div>
                <div class="action-btns">
                    @if (chuyen.TrangThai == TrangThaiChuyenXe.ChoKhoiHanh)
                    {
                        <form asp-controller="TaiXe" asp-action="CheckInXuatBen" asp-route-id="@chuyen.ChuyenId" method="post">
                            <button type="submit" class="btn btn-primary-custom btn-sm">Xuất Bến</button>
                        </form>
                    }
                    else if (chuyen.TrangThai == TrangThaiChuyenXe.DangDiChuyen)
                    {
                        <form asp-controller="TaiXe" asp-action="CheckInDenNoi" asp-route-id="@chuyen.ChuyenId" method="post">
                            <button type="submit" class="btn btn-primary-custom btn-sm">Đã Đến Nơi</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary-custom btn-sm" onclick="showChuyenDetail('@chuyen.ChuyenId')">Chi tiết</button>
                    }
                </div>
            </div>
        }
    }
</div>

<div class="modal fade" id="chuyenDetailModal" tabindex="-1" role="dialog" aria-labelledby="chuyenDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="chuyenDetailModalLabel">Chi tiết chuyến xe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="chuyenDetailContent"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary-custom" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showChuyenDetail(chuyenId) {
            $.ajax({
                url: '@Url.Action("GetChuyenDetail", "TaiXe")',
                type: 'GET',
                data: { chuyenId: chuyenId },
                success: function (data) {
                    $('#chuyenDetailContent').html(data);
                    $('#chuyenDetailModal').modal('show');
                },
                error: function () {
                    alert('Có lỗi xảy ra khi tải thông tin chi tiết.');
                }
            });
        }

        setInterval(function() { location.reload(); }, 300000);
    </script>
}
