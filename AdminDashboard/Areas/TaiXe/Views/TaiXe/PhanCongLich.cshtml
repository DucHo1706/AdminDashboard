@using AdminDashboard.Models.TrangThai
@model IEnumerable<AdminDashboard.Models.ChuyenXe>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Phân Công Lịch Tài Xế";
    var taiXes = ViewBag.TaiXes as SelectList;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    </div>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi!</strong> @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Danh sách chuyến xe chưa phân công -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Chuyến Xe Chưa Phân Công</h6>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center">
                    <p class="text-muted">Không có chuyến xe nào cần phân công.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã Chuyến</th>
                                <th>Lộ Trình</th>
                                <th>Ngày Giờ Đi</th>
                                <th>Xe</th>
                                <th>Trạng Thái</th>
                                <th>Tài Xế</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var chuyen in Model)
                            {
                                <tr>
                                    <td>@chuyen.ChuyenId</td>
                                    <td>
                                        @if (chuyen.LoTrinh?.TramDiNavigation != null && chuyen.LoTrinh?.TramToiNavigation != null)
                                        {
                                            <text>@chuyen.LoTrinh.TramDiNavigation.TenTram → @chuyen.LoTrinh.TramToiNavigation.TenTram</text>
                                        }
                                        else
                                        {
                                            <text>Không có thông tin lộ trình</text>
                                        }
                                    </td>
                                    <td>@chuyen.NgayDi.ToString("dd/MM/yyyy") @chuyen.GioDi.ToString(@"hh\:mm")</td>
                                    <td>@(chuyen.Xe?.BienSoXe ?? "Không có xe")</td>
                                    <td>
                                        <span class="badge
                                                @(chuyen.TrangThai == TrangThaiChuyenXe.DaLenLich ? "badge-secondary" :
                                                                                        chuyen.TrangThai == TrangThaiChuyenXe.DangMoBanVe ? "badge-info" :
                                                                                        chuyen.TrangThai == TrangThaiChuyenXe.ChoKhoiHanh ? "badge-warning" :
                                                                                        chuyen.TrangThai == TrangThaiChuyenXe.DangDiChuyen ? "badge-primary" :
                                                                                        chuyen.TrangThai == TrangThaiChuyenXe.DaHoanThanh ? "badge-success" : "badge-danger")">
                                            @chuyen.TrangThai
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-danger">Chưa phân công</span>
                                    </td>
                                    <td>
                                        <form asp-action="PhanCongLich" method="post" class="form-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="chuyenId" value="@chuyen.ChuyenId" />
                                            <select name="taiXeId" class="form-control form-control-sm mr-2" required style="min-width: 200px;">
                                                <option value="">-- Chọn tài xế --</option>
                                                @if (taiXes != null)
                                                {
                                                    foreach (var item in taiXes)
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-user-check"></i> Phân Công
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="text-center">
        <a asp-action="DanhSachPhanCong" class="btn btn-info">
            <i class="fas fa-history"></i> Xem Lịch Sử Phân Công
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách tài xế
        </a>
    </div>
</div>

<select id="taiXeSelect" class="form-control" name="taiXeId">
    <option value="">-- Chọn tài xế --</option>
    @foreach (var tx in (SelectList)ViewBag.TaiXes)
{
    <option value="@tx.Value">@tx.Text</option>
}

</select>

<div id="lichTaiXeContainer" class="mt-3"></div>

@section Scripts {
    <script>
        document.getElementById("taiXeSelect").addEventListener("change", function() {
            var taiXeId = this.value;
            var container = document.getElementById("lichTaiXeContainer");
            container.innerHTML = "<div class='text-info'>Đang tải lịch làm việc...</div>";

            if (taiXeId) {
                fetch(`/TaiXe/XemLichTaiXe?taiXeId=${taiXeId}`)
                    .then(response => response.text())
                    .then(html => {
                        container.innerHTML = html;
                    })
                    .catch(error => {
                        container.innerHTML = "<div class='alert alert-danger'>Lỗi khi tải dữ liệu.</div>";
                        console.error(error);
                    });
            } else {
                container.innerHTML = "";
            }
        });
    </script>
}
