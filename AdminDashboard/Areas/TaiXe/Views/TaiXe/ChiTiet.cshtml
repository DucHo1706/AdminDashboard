@model AdminDashboard.Models.TaiXe

@{
    ViewData["Title"] = "Hồ Sơ Tài Xế";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f5f5f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container-fluid {
        max-width: 1100px;
        margin: 40px auto;
        padding: 0 15px;
    }

    h1.page-title {
        font-size: 2.4rem;
        font-weight: 700;
        color: #FF9900;
        text-align: center;
        margin-bottom: 1rem;
    }

    hr {
        max-width: 200px;
        height: 4px;
        background: linear-gradient(90deg, #FF9900, #e68a00);
        border: none;
        border-radius: 2px;
        margin: 0 auto 40px;
    }

    a.text-decoration-none {
        color: #FF6600;
        transition: transform 0.2s ease;
    }

        a.text-decoration-none:hover {
            transform: scale(1.2);
        }

    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 15px;
    }
    .card {
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .card-body {
        padding: 30px;
    }

    .display-1 {
        font-size: 5rem;
        color: #FF9900;
    }

    .card-title {
        font-weight: 700;
        font-size: 1.6rem;
        color: #1e293b;
    }

    .text-muted {
        color: #64748b !important;
    }

    .badge {
        font-size: 0.9rem;
        font-weight: 600;
        padding: 0.5em 1em;
        border-radius: 50px;
    }

        .badge.bg-success {
            background-color: #22c55e !important;
            color: #fff;
        }

        .badge.bg-danger {
            background-color: #ef4444 !important;
            color: #fff;
        }

    .btn-warning, .btn-success {
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        transition: all 0.2s ease;
    }

        .btn-warning:hover {
            background-color: #e59400;
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(230,153,0,0.25);
        }

        .btn-success:hover {
            background-color: #16a34a;
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(22,163,74,0.25);
        }

    .nav-tabs .nav-link {
        font-weight: 600;
        color: #475569;
        border-radius: 12px 12px 0 0;
        margin-right: 5px;
        padding: 10px 20px;
        transition: all 0.2s ease;
    }

        .nav-tabs .nav-link.active {
            background: linear-gradient(135deg, #FF9900, #e68a00);
            color: #fff;
            box-shadow: 0 4px 10px rgba(255,153,0,0.3);
        }

        .nav-tabs .nav-link:hover {
            background-color: #ffb84d;
            color: #fff;
        }

    .list-group-item {
        border-radius: 12px;
        margin-bottom: 10px;
        border: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        transition: all 0.2s ease;
    }

        .list-group-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        }

    dt {
        font-weight: 600;
        color: #334155;
    }

    dd {
        color: #475569;
    }

    .tab-content h5 {
        color: #FF9900;
        margin-bottom: 15px;
        font-weight: 700;
        border-bottom: 2px solid #ffe0b3;
        padding-bottom: 5px;
    }
</style>

<div class="container-fluid">
    <h1 class="page-title">@ViewData["Title"]: @Model.HoTen</h1>
    <hr />

    <div class="header-bar mb-3">
        <a asp-action="Index" class="text-decoration-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                 class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                <path fill-rule="evenodd"
                      d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
            </svg>
        </a>
        <div style="width:18px;"></div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-person-vcard display-1"></i>
                    <h4 class="card-title mt-3 mb-1">@Model.HoTen</h4>
                    <p class="text-muted mb-2">Bằng lái: @Model.BangLaiXe</p>

                    @if (Model.TrangThai == "Hoạt động")
                    {
                        <span class="badge bg-success">@Model.TrangThai</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">@Model.TrangThai</span>
                    }

                    <hr class="my-4">

                    <h6 class="fw-semibold mb-3">Hành động</h6>
                    <div class="d-grid gap-2">
                        @if (Model.TrangThai == "Hoạt động")
                        {
                            <form asp-action="DinhChi" method="post" class="d-grid">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.UserId" />
                                <button type="submit" class="btn btn-warning"
                                        onclick="return confirm('Bạn có chắc chắn muốn đình chỉ tài xế này?')">
                                    <i class="bi bi-pause-circle me-1"></i> Đình chỉ
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="BoDinhChi" method="post" class="d-grid">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.UserId" />
                                <button type="submit" class="btn btn-success"
                                        onclick="return confirm('Bạn có chắc chắn muốn bỏ đình chỉ tài xế này?')">
                                    <i class="bi bi-play-circle me-1"></i> Bỏ đình chỉ
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#tab-details" type="button" role="tab">
                                <i class="bi bi-person-lines-fill me-1"></i> Thông tin chi tiết
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#tab-history" type="button" role="tab">
                                <i class="bi bi-list-task me-1"></i> Lịch sử chuyến xe
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="profileTabsContent">
                        <div class="tab-pane fade show active" id="tab-details">
                            <h5>Thông tin tài khoản</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.NguoiDung?.Email</dd>

                                <dt class="col-sm-4">Số điện thoại</dt>
                                <dd class="col-sm-8">@Model.NguoiDung?.SoDienThoai</dd>

                                <dt class="col-sm-4">Ngày sinh</dt>
                                <dd class="col-sm-8">@(Model.NguoiDung?.NgaySinh?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                                <dt class="col-sm-4">Trạng thái tài khoản</dt>
                                <dd class="col-sm-8">
                                    @if (Model.NguoiDung?.TrangThai == AdminDashboard.Models.TrangThaiNguoiDung.HoatDong)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Không hoạt động</span>
                                    }
                                </dd>
                            </dl>

                            <hr class="my-4">

                            <h5>Thông tin công việc</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Ngày vào làm</dt>
                                <dd class="col-sm-8">@Model.NgayVaoLam.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">ID Tài Xế (UserId)</dt>
                                <dd class="col-sm-8"><code>@Model.UserId</code></dd>
                            </dl>
                        </div>

                        <div class="tab-pane fade" id="tab-history">
                            @if (ViewBag.LichSuChuyenXe != null && ViewBag.LichSuChuyenXe.Count > 0)
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var c in ViewBag.LichSuChuyenXe)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <div class="ms-2 me-auto">
                                                <div class="fw-bold">@c.LoTrinh.TramDiNavigation.TenTram - @c.LoTrinh.TramToiNavigation.TenTram</div>
                                                <small class="text-muted">Ngày đi: @c.NgayDi.ToString("dd/MM/yyyy")</small>
                                            </div>
                                            <span class="badge bg-primary rounded-pill">@c.TrangThai</span>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted fst-italic mb-0">Chưa có chuyến xe nào.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
