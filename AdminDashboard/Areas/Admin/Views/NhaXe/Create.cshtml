@model AdminDashboard.Areas.Admin.Models.CreateNhaXeViewModel

@{
    ViewData["Title"] = "Tạo Nhà Xe Mới";
    Layout = "_Layout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Tạo Đối Tác Mới</h1>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="card mb-4 shadow-sm border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">1. Thông tin Doanh nghiệp (Nhà xe)</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên Nhà Xe (Thương hiệu)</label>
                            <input asp-for="TenNhaXe" class="form-control" placeholder="Ví dụ: Phương Trang" />
                            <span asp-validation-for="TenNhaXe" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số điện thoại Hotline</label>
                                <input asp-for="SoDienThoaiNhaXe" class="form-control" />
                                <span asp-validation-for="SoDienThoaiNhaXe" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Địa chỉ trụ sở</label>
                                <input asp-for="DiaChi" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4 shadow-sm border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">2. Cấp tài khoản quản trị cho Chủ Xe</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ tên người đại diện</label>
                            <input asp-for="HoTenChuXe" class="form-control" />
                            <span asp-validation-for="HoTenChuXe" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email đăng nhập</label>
                                <input asp-for="EmailChuXe" class="form-control" placeholder="email@nhaxe.com" />
                                <span asp-validation-for="EmailChuXe" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Mật khẩu mặc định</label>
                                <input asp-for="MatKhauMacDinh" class="form-control" value="123456" />
                                <small class="text-muted">Chủ xe có thể đổi mật khẩu sau khi đăng nhập.</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Lưu & Tạo Tài Khoản
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>