@* //BAOLONG// *@
@model AdminDashboard.Models.LoTrinh

@{
    ViewData["Title"] = "Chi Tiết Lộ Trình";
}

<div class="details-page-container">
    <div class="details-panel">
        <div class="panel-header">
            <h2><i class="fas fa-info-circle"></i> @ViewData["Title"]</h2>
        </div>

        <div class="panel-body">
            <div class="details-list">
                <div class="detail-item">
                    <span class="detail-label">Mã Lộ Trình</span>
                    <span class="detail-value id-badge">@Model.LoTrinhId</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Trạm Đi</span>
                    <span class="detail-value route-point">@Model.TramDiNavigation.TenTram</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Trạm Đến</span>
                    <span class="detail-value route-point">@Model.TramToiNavigation.TenTram</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Giá Vé Cố Định</span>
                    <span class="detail-value price-tag">@String.Format("{0:N0}", Model.GiaVeCoDinh) VNĐ</span>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <a asp-action="Index" class="btn btn-secondary-custom">
                <i class="fas fa-arrow-left"></i> Quay Lại Danh Sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.LoTrinhId" class="btn btn-edit-custom">
                <i class="fas fa-edit"></i> Chỉnh Sửa
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Poppins', sans-serif;
    }

    .details-page-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 15px;
    }

    .details-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 700px;
        overflow: hidden;
    }

    .panel-header {
        background-color: #f8f9fa;
        padding: 25px 30px;
        border-bottom: 1px solid #e9ecef;
    }

        .panel-header h2 {
            font-weight: 700;
            font-size: 24px;
            color: #3f4c6b;
            margin: 0;
        }

            .panel-header h2 i {
                color: #0dcaf0; /* Cyan color for details icon */
                margin-right: 12px;
            }

    .panel-body {
        padding: 20px 30px;
    }

    .details-list {
        display: flex;
        flex-direction: column;
        gap: 15px; /* Creates space between items */
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #0dcaf0;
    }

    .detail-label {
        font-weight: 500;
        color: #6c757d;
        font-size: 15px;
    }

    .detail-value {
        font-weight: 600;
        font-size: 16px;
        color: #212529;
    }

    .id-badge {
        background-color: #e9ecef;
        color: #495057;
        padding: 4px 8px;
        border-radius: 5px;
        font-size: 14px;
    }

    .route-point {
        font-style: italic;
    }

    .price-tag {
        color: #198754;
        font-weight: 700;
    }

    .panel-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 30px;
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }

    .btn-edit-custom, .btn-secondary-custom {
        padding: 10px 22px;
        font-weight: 600;
        font-size: 15px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-edit-custom {
        background-color: #ffc107; /* Yellow */
        color: #212529;
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }

        .btn-edit-custom:hover {
            background-color: #ffb300;
            transform: translateY(-2px);
        }

    .btn-secondary-custom {
        background-color: #6c757d; /* Gray */
        color: #fff;
    }

        .btn-secondary-custom:hover {
            background-color: #5a6268;
        }

        .btn-edit-custom i, .btn-secondary-custom i {
            margin-right: 8px;
        }
</style>