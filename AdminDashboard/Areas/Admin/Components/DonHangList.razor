@code {
    [Parameter]
    public PaginatedList<DonHangVM>? DonHangs { get; set; }

    [Parameter]
    public int KhachHangPageIndex { get; set; } = 1;

    [Parameter]
    public string FilterType { get; set; } = "all";

    [Parameter]
    public DateTime? FilterDate { get; set; }

    [Parameter]
    public int? FilterMonth { get; set; }

    [Parameter]
    public int? FilterYear { get; set; }

    [Parameter]
    public EventCallback<int> OnPageChange { get; set; }

    private async Task HandlePageChange(int pageIndex)
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("console.log", 
                $"üü£ DonHangList.HandlePageChange called with pageIndex: {pageIndex}, DonHangs.PageIndex: {DonHangs?.PageIndex}");
        }
        catch { }
        
        if (OnPageChange.HasDelegate)
        {
            await OnPageChange.InvokeAsync(pageIndex);
        }
    }

    private string GetPaginationUrl(int pageIndex)
    {
        var queryParams = new List<string>
        {
            $"khachHangPage={KhachHangPageIndex}",
            $"donHangPage={pageIndex}"
        };

        if (FilterType != "all")
        {
            queryParams.Add($"filterType={FilterType}");
            if (FilterDate.HasValue)
            {
                queryParams.Add($"filterDate={FilterDate.Value:yyyy-MM-dd}");
            }
            if (FilterMonth.HasValue)
            {
                queryParams.Add($"filterMonth={FilterMonth.Value}");
            }
            if (FilterYear.HasValue)
            {
                queryParams.Add($"filterYear={FilterYear.Value}");
            }
        }

        return $"/Admin/Statistics?{string.Join("&", queryParams)}#donhang";
    }
}

