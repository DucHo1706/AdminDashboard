@model AdminDashboard.Models.ChuyenXe
@{
    ViewData["Title"] = "Điều Phối Tài Xế";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0 text-uppercase fw-bold"><i class="fas fa-steering-wheel me-2"></i> Phân Công Tài Xế</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-light border">
                <h6 class="text-primary fw-bold">Thông tin chuyến xe:</h6>
                <ul class="list-unstyled mb-0">
                    <li><strong>Tuyến:</strong> @Model.LoTrinh.TramDiNavigation.TenTram <i class="fas fa-arrow-right mx-1"></i> @Model.LoTrinh.TramToiNavigation.TenTram</li>
                    <li><strong>Biển số xe:</strong> <span class="badge bg-warning text-dark">@Model.Xe.BienSoXe</span></li>
                    <li><strong>Khởi hành:</strong> @Model.GioDi.ToString(@"hh\:mm") - Ngày @Model.NgayDi.ToString("dd/MM/yyyy")</li>
                </ul>
            </div>

            <form asp-action="PhanCong" method="post">
                <input type="hidden" name="id" value="@Model.ChuyenId" />

                <div class="mb-4">
                    <label class="form-label fw-bold">Chọn Tài xế phụ trách:</label>
                    <select name="taiXeId" class="form-select form-select-lg" asp-items="ViewBag.ListTaiXe">
                        <option value="">-- Chưa phân công (Để trống) --</option>
                    </select>
                    <small class="text-muted">Danh sách chỉ hiển thị tài xế đang hoạt động.</small>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success flex-grow-1"><i class="fas fa-save me-2"></i> Lưu Phân Công</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>