@using AdminDashboard.Models.TrangThai
@using AdminDashboard.Helpers
@model IEnumerable<AdminDashboard.Models.ChuyenXe>

<style>
    /* CSS cho Accordion */
    .accordion-item {
        border: 1px solid #e0e0e0;
        border-radius: 8px !important;
        margin-bottom: 10px;
        overflow: hidden;
    }

    .accordion-button {
        background-color: #f8f9fa;
        font-weight: 600;
        color: #333;
    }

        .accordion-button:not(.collapsed) {
            background-color: #e7f1ff;
            color: #0c63e4;
            box-shadow: inset 0 -1px 0 rgba(0,0,0,.125);
        }

        .accordion-button:focus {
            box-shadow: none;
            border-color: rgba(0,0,0,.125);
        }

    .date-badge {
        background-color: #FF6633;
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        margin-left: auto; /* Đẩy sang phải */
        margin-right: 10px;
    }

    /* CSS cho ảnh xe nhỏ trong bảng */
    .img-xs {
        width: 60px;
        height: 40px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #ddd;
    }
</style>

<div class="container-fluid p-0">
    @if (Model != null && Model.Any())
    {
        var groupedData = Model.GroupBy(x => x.NgayDi.Date).OrderBy(g => g.Key);

        <div class="accordion" id="accordionChuyenXe">
            @foreach (var group in groupedData)
            {
                var dateId = "date-" + group.Key.ToString("yyyyMMdd");
                var isToday = group.Key == DateTime.Today;
                var count = group.Count();

                <div class="accordion-item shadow-sm">
                    <h2 class="accordion-header" id="heading-@dateId">
                        <button class="accordion-button @(isToday ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@dateId" aria-expanded="@(isToday ? "true" : "false")" aria-controls="collapse-@dateId">
                            <i class="far fa-calendar-alt me-2 text-primary"></i>
                            <span>Ngày @group.Key.ToString("dd/MM/yyyy")</span>
                            <span class="date-badge">@count chuyến</span>
                        </button>
                    </h2>

                    <div id="collapse-@dateId" class="accordion-collapse collapse @(isToday ? "show" : "")" aria-labelledby="heading-@dateId" data-bs-parent="#accordionChuyenXe">
                        <div class="accordion-body p-0">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light text-secondary small">
                                    <tr>
                                        <th class="ps-4">Giờ</th>
                                        <th>Lộ Trình</th>
                                        <th>Xe & Ảnh</th>
                                        <th>Trạng Thái</th>
                                        <th class="text-end pe-4">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in group.OrderBy(x => x.GioDi))
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">
                                                @item.GioDi.ToString(@"hh\:mm")
                                            </td>
                                            <td>
                                                <div class="fw-bold text-dark">
                                                    @(item.LoTrinh?.TramDiNavigation?.TenTram)
                                                    <i class="bi bi-arrow-right small text-muted mx-1"></i>
                                                    @(item.LoTrinh?.TramToiNavigation?.TenTram)
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (item.Images != null && item.Images.Any())
                                                    {
                                                        <img src="@item.Images.First().ImageUrl" class="img-xs me-2" alt="Xe" />
                                                    }
                                                    else
                                                    {
                                                        <div class="img-xs me-2 d-flex align-items-center justify-content-center bg-light text-muted small">No IMG</div>
                                                    }
                                                    <span class="badge bg-light text-dark border">@item.Xe?.BienSoXe</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @(item.TrangThai == TrangThaiChuyenXe.DaHoanThanh ? "bg-secondary" :
                                                                   item.TrangThai == TrangThaiChuyenXe.DangMoBanVe ? "bg-success" :
                                                                   item.TrangThai == TrangThaiChuyenXe.ChoKhoiHanh ? "bg-info text-dark" :
                                                                   item.TrangThai == TrangThaiChuyenXe.DaHuy ? "bg-danger" :
                                                                   "bg-warning text-dark")">
                                                    @item.TrangThai.GetDisplayName()
                                                </span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@item.ChuyenId" class="btn btn-outline-info" title="Chi tiết">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.ChuyenId" class="btn btn-outline-success" title="Sửa">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.ChuyenId" title="Xóa">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm">
                        @{
                            var currentPage = ViewBag.CurrentPage;
                            var totalPages = ViewBag.TotalPages;
                        }

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="#" data-page="@(currentPage - 1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="#" data-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="#" data-page="@(currentPage + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center mt-4 shadow-sm border-0">
            <i class="bi bi-exclamation-triangle me-2"></i> Không tìm thấy chuyến xe nào phù hợp.
        </div>
    }
</div>