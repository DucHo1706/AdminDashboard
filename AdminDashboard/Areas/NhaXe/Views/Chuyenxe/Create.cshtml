@model AdminDashboard.Models.ViewModels.TaoLichChayRequest
@{
    ViewData["Title"] = "Lên Lịch Chuyến Xe Tự Động";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        /* --- GIỮ NGUYÊN CSS GỐC CỦA BẠN --- */
        body {
            background-color: #f0f4f8;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Roboto, sans-serif;
        }

        h2 {
            text-align: center;
            font-size: 38px;
            font-weight: 700;
            color: #111827;
            text-transform: uppercase;
            margin-bottom: 15px;
        }

        .form {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 85vh;
            padding: 40px 0;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 50px 60px;
            border-radius: 16px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.2);
            width: 95%;
            max-width: 800px;
        }

        .form-group-custom {
            margin-bottom: 22px;
        }

        .control-label {
            font-weight: 600;
            color: #4a5568;
            margin-bottom: 6px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .control-label i {
                color: #ff9800;
            }

        .form-control, .form-select {
            height: 45px;
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 0 14px;
            font-size: 15px;
            transition: 0.2s ease;
        }

        input[type="file"].form-control {
            padding: 10px 14px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #ff9800;
            box-shadow: 0 0 0 3px rgba(255, 152, 0, 0.2);
            outline: none;
        }

        /* Button Chính */
        button[type="submit"] {
            position: relative;
            padding: 12px 24px;
            border-radius: 8px;
            border: 1px solid #FF6633;
            font-size: 15px;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
            background: transparent;
            color: black;
            overflow: hidden;
            transition: all 0.25s ease;
            width: 100%;
        }

            button[type="submit"]:hover {
                background: #FF6633;
                box-shadow: 0 0 20px 5px #FF9933;
                color: white;
            }

        /* Button Chọn Nhanh (Style theo theme cam) */
        .btn-quick {
            padding: 6px 12px;
            margin: 0 4px;
            border: 1px solid #FFCCBC; /* Cam nhạt */
            border-radius: 6px;
            background-color: white;
            color: #E64A19; /* Cam đậm */
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

            .btn-quick:hover {
                border-color: #FF6633;
                background-color: #FF6633;
                color: white;
                transform: translateY(-1px);
            }

        /* Divider Text */
        .divider-text {
            display: flex;
            align-items: center;
            text-align: center;
            color: #FF6633;
            font-weight: 700;
            margin: 25px 0 15px 0;
            text-transform: uppercase;
            font-size: 14px;
        }

            .divider-text::before, .divider-text::after {
                content: '';
                flex: 1;
                border-bottom: 1px dashed #FFCCBC;
            }

            .divider-text::before {
                margin-right: 10px;
            }

            .divider-text::after {
                margin-left: 10px;
            }


        /* Các class hỗ trợ cũ */
        a.text-decoration-none {
            color: #ff6633;
            transition: transform 0.2s ease;
        }

            a.text-decoration-none:hover {
                transform: scale(1.2);
            }

        hr {
            border: none;
            height: 1px;
            background-color: #ccc;
            margin-bottom: 20px;
        }

        .text-center {
            text-align: center;
        }

        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: -10px;
            margin-bottom: 10px;
        }

            .logo-wrapper img {
                width: 130px;
                height: 38px;
            }

        small.text-muted {
            font-size: 12px;
            color: #888;
            display: block;
            margin-top: 3px;
        }

    </style>
</head>

<body>
    <h2>Lên Lịch Chuyến Xe (Tự Động)</h2>
    <hr />
    <div class="form">
        <div class="form-container">

            <form asp-action="Create" class="form-submit-once" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="header-bar mb-3">
                    <a asp-action="Index" class="text-decoration-none">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                        </svg>
                    </a>
                    <div style="width:18px;"></div>
                </div>

                <div class="logo-wrapper">
                    <img src="~/css/Images/logo_web.png" alt="Logo" />
                </div>
                <hr class="bg-black" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-route"></i> Lộ trình</label>
                            <select name="LoTrinhId" class="form-select" asp-items="ViewBag.LoTrinhId" required>
                                <option value="">-- Chọn lộ trình --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-bus"></i> Xe</label>
                            <select name="XeId" class="form-select" asp-items="ViewBag.XeId" required>
                                <option value="">-- Chọn xe --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="divider-text"><i class="fas fa-calendar-week me-2"></i> Thiết lập ngày chạy</div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-calendar-alt"></i> Từ ngày</label>
                            <input type="date" id="TuNgay" name="TuNgay" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-calendar-check"></i> Đến ngày</label>
                            <input type="date" id="DenNgay" name="DenNgay" class="form-control" value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-12 text-center">
                        <button type="button" class="btn-quick" onclick="setDuration(7)">+1 Tuần</button>
                        <button type="button" class="btn-quick" onclick="setDuration(14)">+2 Tuần</button>
                        <button type="button" class="btn-quick" onclick="setDuration(30)">+1 Tháng</button>
                        <button type="button" class="btn-quick" onclick="setDuration(60)">+2 Tháng</button>
                    </div>
                </div>

                <div class="divider-text"><i class="fas fa-history me-2"></i> Tần suất chạy trong ngày</div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-clock"></i> Bắt đầu chạy từ</label>
                            <input type="time" name="KhungGioTu" class="form-control" value="07:00" required />
                            <small class="text-muted">Chuyến đầu tiên xuất bến lúc mấy giờ?</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-ban"></i> Kết thúc lúc</label>
                            <input type="time" name="KhungGioDen" class="form-control" value="19:00" required />
                            <small class="text-muted">Không tạo thêm chuyến sau giờ này</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-sync-alt"></i> Giãn cách chuyến</label>
                            <select name="GianCachPhut" class="form-select">
                                <option value="30">30 phút / chuyến</option>
                                <option value="60">60 phút (1 tiếng) / chuyến</option>
                                <option value="90">90 phút (1.5 tiếng) / chuyến</option>
                                <option value="120" selected>120 phút (2 tiếng) / chuyến</option>
                                <option value="180">180 phút (3 tiếng) / chuyến</option>
                                <option value="240">240 phút (4 tiếng) / chuyến</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group-custom">
                            <label class="control-label"><i class="fas fa-hourglass-half"></i> Thời gian di chuyển</label>
                            <input type="time" name="ThoiGianDiChuyen" class="form-control" value="05:00" required />
                            <small class="text-muted">Xe chạy hết bao lâu thì tới nơi?</small>
                        </div>
                    </div>
                </div>

                <div class="divider-text"><i class="fas fa-images me-2"></i> Hình ảnh</div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group-custom">
                            <label class="control-label">Tải ảnh lên</label>
                            <input type="file" name="images" class="form-control" multiple accept="image/*" />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit">Tạo Lịch Chạy Tự Động</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <script>
            function setDuration(days) {
                const startDateInput = document.getElementById('TuNgay');
                const endDateInput = document.getElementById('DenNgay');

                if (!startDateInput.value) {
                    alert("Vui lòng chọn 'Từ ngày' trước!");
                    return;
                }

                const startDate = new Date(startDateInput.value);
                const endDate = new Date(startDate);
                endDate.setDate(startDate.getDate() + days);

                const yyyy = endDate.getFullYear();
                const mm = String(endDate.getMonth() + 1).padStart(2, '0');
                const dd = String(endDate.getDate()).padStart(2, '0');

                endDateInput.value = `${yyyy}-${mm}-${dd}`;
            }
        </script>
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>