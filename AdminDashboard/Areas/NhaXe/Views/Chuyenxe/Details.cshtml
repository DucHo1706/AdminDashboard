@using AdminDashboard.Models.TrangThai
@model AdminDashboard.Models.ChuyenXe

@{
    ViewData["Title"] = "Chi tiết Chuyến xe";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f0f4f8;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Roboto, sans-serif;
        }

        h2 {
            text-align: center;
            font-size: 38px;
            font-weight: 700;
            color: #111827;
            text-transform: uppercase;
            margin-top: 40px;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .details-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            padding: 40px 50px;
            max-width: 900px;
            margin: 0 auto;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid #e5e7eb;
            padding: 12px 0;
            flex-wrap: wrap; /* Cho phép rớt dòng nếu cần */
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-weight: 600;
            font-size: 16px;
            color: #1f2937;
            width: 35%;
            min-width: 150px; /* Thêm min-width */
        }

        .detail-value {
            font-size: 16px;
            color: #374151;
            text-align: right;
            width: 60%;
            word-break: break-word; /* Chống tràn chữ */
        }

            /* Style cho phần hình ảnh */
            .detail-value.image-gallery {
                width: 100%;
                text-align: left;
                margin-top: 10px;
            }

        .btn {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background-color: #3b82f6;
            border: none;
        }

            .btn-primary:hover {
                background-color: #2563eb;
                transform: scale(1.03);
                transition: 0.2s;
            }

        .btn-secondary {
            background-color: #e5e7eb;
            color: #111827;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #d1d5db;
                transform: scale(1.03);
                transition: 0.2s;
            }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 900px;
            margin: 20px auto 10px;
        }

        .back-icon {
            color: #dc2626;
            transition: transform 0.2s ease;
            text-decoration: none;
        }

            .back-icon:hover {
                transform: scale(1.3);
            }

        img {
            transition: transform 0.2s ease;
        }

            img:hover {
                transform: scale(1.05);
            }

        .custom-hr {
            max-width: 900px;
            height: 3px;
            background-color: aqua;
            border: none;
            border-radius: 3px;
            margin: 0 auto 30px;
        }

        .logo-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: -10px;
            margin-bottom: 10px;
        }

            .logo-wrapper img {
                width: 130px;
                height: 38px;
            }

        .button {
            position: relative;
            padding: 12px 24px;
            border-radius: 8px;
            border: 1px solid #3366CC;
            font-size: 15px;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
            background: transparent;
            color: black;
            overflow: hidden;
            transition: all 0.25s ease;
        }

            .button:hover {
                background: #0099FF;
                box-shadow: 0 0 20px 5px #0099FF;
                color: white;
            }
    </style>
</head>

<body>
    <h2 class="text-primary">Chi tiết Chuyến Xe</h2>
    <hr class="custom-hr" />
    <div class="details-card">
        <div class="header-bar mb-3">
            <a asp-action="Index" class="text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" /><path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" /></svg>
            </a>
            <div style="width:18px;"></div>
        </div>
        <div class="logo-wrapper">
            <img src="~/css/Images/logo_web.png" alt="Logo" />
        </div>
        <hr class="custom-hr" />
        <div class="detail-item">
            <div class="detail-label">Xe</div>
            <div class="detail-value">@Html.DisplayFor(model => model.Xe.BienSoXe)</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Ngày Đi</div>
            <div class="detail-value">@Model.NgayDi.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Giờ Đi</div>
            <div class="detail-value">@Model.GioDi.ToString(@"hh\:mm")</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Giờ Đến Dự Kiến</div>
            <div class="detail-value">@Model.GioDenDuKien.ToString(@"hh\:mm")</div>
        </div>
        <div class="detail-item">
            <div class="detail-label">Trạng Thái</div>
            <div class="detail-value">@Html.DisplayFor(model => model.TrangThai)</div>
        </div>

        @if (Model.Images != null && Model.Images.Any())
        {
            <div class="detail-item">
                <div class="detail-label">Hình ảnh</div>
                <div class="detail-value image-gallery">
                    <div class="row g-2">
                        @foreach (var image in Model.Images)
                        {
                            <div class="col-md-4 col-lg-3 mb-2">
                                <a href="@image.ImageUrl" target="_blank" title="Xem ảnh đầy đủ">
                                    <img src="@image.ImageUrl" class="img-fluid rounded shadow-sm"
                                         style="height: 100px; width: 100%; object-fit: cover;"
                                         alt="Ảnh chuyến xe">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        <div class="text-center mt-5">
            <a asp-action="Edit" asp-route-id="@Model.ChuyenId" class="button me-2 px-4 text-decoration-none">Chỉnh sửa</a>
        </div>
    </div>
</body>