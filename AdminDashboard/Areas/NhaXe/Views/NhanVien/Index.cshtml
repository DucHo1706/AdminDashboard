@model IEnumerable<AdminDashboard.Models.NhanVien>

@{
    ViewData["Title"] = "Quản Lý Nhân Sự";
}

<div class="page-container">
    <div class="page-header">
        <h1 class="page-title"><i class="fas fa-users-cog"></i> @ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-add-new">
            <i class="fas fa-plus-circle"></i> Thêm Nhân Viên
        </a>
    </div>

    <div class="content-panel">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success custom-alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger custom-alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table modern-table">
                <thead>
                    <tr>
                        <th>Mã NV</th>
                        <th>Họ Tên</th>
                        <th>Vai Trò</th>
                        <th>Liên Hệ</th>
                        <th>Chi tiết bằng cấp</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge bg-primary-light">@item.NhanVienId.Substring(0, 8)...</span></td>

                            <td class="fw-bold">
                                <div class="d-flex align-items-center">
                                    <img src="@(string.IsNullOrEmpty(item.AvatarUrl) ? "https://khoinguonsangtao.vn/wp-content/uploads/2022/06/hinh-avatar-hai-khuon-mat-kho-do-cua-chu-meo.jpg" : item.AvatarUrl)"
                                         style="width: 30px; height: 30px; border-radius: 50%; object-fit: cover; margin-right: 10px;" alt="Avt" />
                                    @item.HoTen
                                </div>
                            </td>

                            <td>
                                @if (item.VaiTro == AdminDashboard.Models.VaiTroNhanVien.TaiXe)
                                {
                                    <span class="badge bg-info-light">Tài xế</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-light">Bán vé</span>
                                }
                            </td>

                            <td>
                                <div style="font-size: 0.9rem;">
                                    <div><i class="fas fa-phone text-success"></i> @item.SoDienThoai</div>
                                    @if (!string.IsNullOrEmpty(item.SoDienThoai))
                                    {
                                        <div class="text-muted small">@item.CCCD</div>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (item.VaiTro == AdminDashboard.Models.VaiTroNhanVien.TaiXe)
                                {
                                    <div class="d-flex flex-column small">
                                        <span class="text-dark">Bằng: <strong>@item.SoBangLai</strong></span>
                                        <span class="text-muted">Hạng: @item.HangBangLai</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small opacity-50">---</span>
                                }
                            </td>
                            <td>
                                @if (item.DangLamViec)
                                {
                                    <span class="badge" style="background-color: #d4edda; color: #155724;">Đang làm việc</span>
                                }
                                else
                                {
                                    <span class="badge" style="background-color: #f8d7da; color: #721c24;">Đã nghỉ việc</span>
                                }
                            </td>

                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.NhanVienId" class="btn-action btn-edit" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn-action btn-delete" title="Xóa"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@item.NhanVienId"
                                            data-ten="@item.HoTen">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" id="deleteForm">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel"><i class="fas fa-exclamation-triangle"></i> Xác Nhận Xóa Nhân Viên</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="deleteId" name="id" />
                    <p>Bạn có chắc chắn muốn xóa nhân viên này không?</p>
                    <dl class="row mt-3 bg-light p-2 rounded">
                        <dt class="col-sm-4">Họ Tên</dt>
                        <dd class="col-sm-8 fw-bold" id="deleteTen"></dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        const deleteForm = document.getElementById('deleteForm');

        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const ten = button.getAttribute('data-ten');

            // Set giá trị vào form
            deleteModal.querySelector('#deleteId').value = id;
            deleteModal.querySelector('#deleteTen').textContent = ten;

            // Cập nhật action của form
            if (deleteForm && id) {
                deleteForm.action = '/Admin/NhanVien/Delete/' + id;
            }
        });

        // Tự động ẩn thông báo sau 3s
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                if (bsAlert) bsAlert.close();
            });
        }, 3000);
    </script>
}

