@model IEnumerable<AdminDashboard.Models.NhanVien>
@{
    ViewData["Title"] = "Quản Lý Nhân Sự";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <div>
            <h2 class="text-uppercase fw-bold text-primary mb-0">Nhân Sự</h2>
            <small class="text-muted">Quản lý Tài xế và Nhân viên bán vé</small>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm fw-bold">
            <i class="fas fa-user-plus me-2"></i> Thêm Nhân Viên
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <i class="fas fa-users me-1 text-secondary"></i>
            Danh sách nhân sự hiện tại (@Model.Count())
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small text-muted">
                        <tr>
                            <th class="ps-4">Họ Tên / Mã</th>
                            <th>Vai Trò</th>
                            <th>Liên Lạc</th>
                            <th>Thông Tin Thêm</th>
                            <th>Trạng Thái</th>
                            <th class="text-end pe-4">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="fas fa-user-slash fa-2x mb-3"></i><br />
                                    Chưa có nhân viên nào. Hãy thêm mới!
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="position-relative">
                                                <img src="@(string.IsNullOrEmpty(item.AvatarUrl) ? "/images/default-user.png" : item.AvatarUrl)"
                                                     class="rounded-circle border"
                                                     style="width: 45px; height: 45px; object-fit: cover;"
                                                     alt="Avatar" />
                                                @if (item.DangLamViec)
                                                {
                                                    <span class="position-absolute bottom-0 start-100 translate-middle p-1 bg-success border border-light rounded-circle"></span>
                                                }
                                                else
                                                {
                                                    <span class="position-absolute bottom-0 start-100 translate-middle p-1 bg-secondary border border-light rounded-circle"></span>
                                                }
                                            </div>
                                            <div class="ms-3">
                                                <div class="fw-bold text-dark">@item.HoTen</div>
                                                <div class="small text-muted" style="font-size: 0.8rem;">ID: @item.NhanVienId.Substring(0, 8)...</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.VaiTro == AdminDashboard.Models.VaiTroNhanVien.TaiXe)
                                        {
                                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2 rounded-pill">
                                                <i class="fas fa-steering-wheel me-1"></i> Tài xế
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 px-3 py-2 rounded-pill">
                                                <i class="fas fa-ticket-alt me-1"></i> Bán vé
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="text-dark fw-bold"><i class="fas fa-phone-alt text-success me-2" style="font-size:0.8rem"></i>@item.SoDienThoai</span>
                                            @if (!string.IsNullOrEmpty(item.CCCD))
                                            {
                                                <span class="small text-muted"><i class="far fa-id-card me-2" style="font-size:0.8rem"></i>@item.CCCD</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.VaiTro == AdminDashboard.Models.VaiTroNhanVien.TaiXe)
                                        {
                                            <small class="d-block text-muted">Bằng lái: <span class="fw-bold text-dark">@item.SoBangLai</span></small>
                                            <small class="d-block text-muted">Hạng: <span class="badge bg-secondary">@item.HangBangLai</span></small>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">---</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.DangLamViec)
                                        {
                                            <span class="badge bg-success">Đang làm việc</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Đã nghỉ</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <a href="#" class="btn btn-sm btn-outline-secondary" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                                            <button class="btn btn-sm btn-outline-danger" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa nhân viên này?')"><i class="fas fa-trash"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>